<section class="featured">
	{{#each sliders}}
		{{#if largeTitle}}
			<h1 class="featured-title-large">
				{{title}}
			</h1>
		{{else}}
			<h1 class="featured-title">
				{{title}}
			</h1>
		{{/if}}
		<div id="{{id}}" class="featured-carousel slick-slider">
			{{#each entries}}
				<div class="slick-list">
					<a href="{{url}}">
						<img src="{{image}}">
						<div class="hero-text-overlay">
							{{text}}
						</div>
						{{#if english}}
							<div class="hero-english-overlay"></div>
						{{/if}}
					</a>
				</div>
			{{/each}}
		</div>
	{{/each}}
</section>
