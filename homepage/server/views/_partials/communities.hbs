<section class="featured-mobile-2row">
	{{#each sliders}}
		<h1 class="featured-title">
			{{title}}
		</h1>
		<div class="featured-mobile-2row-wrapper">
			{{#each groupedEntries}}
				<div class="featured-mobile-slide featured-mobile-slide-2row">
					<a href="{{left.url}}">
						<img src="{{left.image}}">
						<div class="hero-text-overlay">
							{{left.text}}
						</div>
						{{#if left.english}}
							<div class="hero-english-overlay"></div>
						{{/if}}
					</a>
				</div>
				<div class="featured-mobile-slide featured-mobile-slide-2row">
					{{#if right.url}}
						<a href="{{right.url}}">
							<img src="{{right.image}}">
							<div class="hero-text-overlay">
								{{right.text}}
							</div>
							{{#if right.english}}
								<div class="hero-english-overlay"></div>
							{{/if}}
						</a>
					{{/if}}
				</div>
				<div class="featured-mobile-slide-padding"></div>
