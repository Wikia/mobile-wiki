<div id="loading" class="loading">
	<div class="loading-wrapper">
		<img class="hero-image-desktop" src="{{heroSlider.0.image}}">
		<div class="hero-text">
			<h1>{{heroSlider.0.title}}</h1>
			<h2>{{heroSlider.0.subtitle}}</h2>
			{{#if heroSlider.0.button}}
				<a class="hero-link" href="{{heroSlider.0.buttonLink}}" id="{{heroSlider.0.buttonId}}">
					{{heroSlider.0.buttonText}}
				</a>
			{{/if}}
		</div>
	</div>
</div>
