{
  "name": "Mercury",
  "version": "0.0.0",
  "description": "Wikia Web Application",
  "main": "dist/server/app/server.js",
  "scripts": {
    "//1": "SETUP SCRIPTS",
    "setup": "npm install && npm run setup-common && npm run setup-auth && npm run setup-main && npm run setup-server",
    "setup-common": "cd front/common && bower install",
    "setup-auth": "cd front/auth && bower install",
    "setup-main": "cd front/main && npm install && bower install",
    "setup-server": "cd server && npm install && cd .. && gulp build-server-init-config",
    "//2": "BUILD SCRIPTS",
    "build": "rm -rf dist && gulp build-common && gulp build-auth && cd front/main && ember build && cd ../.. && gulp build-server",
    "build-prod": "rm -rf dist && gulp build-common --type prod && gulp build-auth --type prod && cd front/main && ember build --environment=production && cd ../.. && gulp build-server --type prod",
    "//3": "DEVELOPMENT SCRIPTS",
    "start": "nodemon --delay 2",
    "dev": "rm -rf dist && gulp build-common && gulp build-auth && gulp build-server && npm-run-all --parallel watch-auth watch-common watch-main watch-server start",
    "watch-auth": "gulp watch-auth",
    "watch-common": "gulp watch-common",
    "watch-main": "cd front/main && ember build --watch",
    "watch-server": "gulp watch-server",
    "//4": "TEST SCRIPTS",
    "test": "npm run build && npm run test-front && npm run test-server",
    "test-front": "gulp test-common && gulp test-auth && cd front/main && ember test",
    "test-server": "gulp test-server",
    "linter": "eslint ."
  },
  "repository": "git://github.com/Wikia/mercury.git",
  "license": "MIT",
  "homepage": "https://github.com/Wikia/mercury",
  "private": true,
  "devDependencies": {
    "babel-eslint": "4.1.6",
    "babel-plugin-rename-define": "Wikia/babel-plugin-rename-define#v2.0.0",
    "babel-plugin-transform-es2015-modules-amd": "6.3.13",
    "babel-preset-es2015": "6.3.13",
    "ember-cli": "2.2.0-beta.3",
    "ember-template-compiler": "1.9.0-alpha",
    "eslint": "1.10.3",
    "flipcss": "0.2.8",
    "glob": "4.5.3",
    "gulp": "3.9.0",
    "gulp-autoprefixer": "2.3.1",
    "gulp-babel": "6.1.1",
    "gulp-cached": "1.1.0",
    "gulp-changed": "1.3.0",
    "gulp-concat": "2.6.0",
    "gulp-declare": "0.3.0",
    "gulp-develop-server": "0.2.5",
    "gulp-expect-file": "0.0.7",
    "gulp-filter": "3.0.1",
    "gulp-fixtures2js": "0.0.1",
    "gulp-folders": "1.1.0",
    "gulp-gzip": "1.1.0",
    "gulp-if": "1.2.5",
    "gulp-minify-html": "1.0.4",
    "gulp-newer": "0.5.2",
    "gulp-preprocess": "2.0.0",
    "gulp-rename": "1.2.2",
    "gulp-replace": "0.5.4",
    "gulp-rev": "6.0.1",
    "gulp-rev-replace": "0.4.3",
    "gulp-sass": "1.3.3",
    "gulp-svg-symbols": "0.3.2",
    "gulp-uglify": "1.5.1",
    "gulp-useref": "1.3.0",
    "gulp-util": "3.0.7",
    "gulp-vulcanize": "6.1.0",
    "gulp-watch": "4.3.5",
    "gulp-wrap": "0.11.0",
    "karma": "0.13.19",
    "karma-chrome-launcher": "0.2.2",
    "karma-coverage": "0.5.3",
    "karma-phantomjs-launcher": "0.2.1",
    "karma-qunit": "0.1.8",
    "multipipe": "0.1.2",
    "nodemon": "1.8.1",
    "npm-run-all": "1.4.0",
    "qunit": "0.7.7",
    "qunitjs": "1.20.0",
    "run-sequence": "1.1.5",
    "through2": "0.6.5"
  }
}
