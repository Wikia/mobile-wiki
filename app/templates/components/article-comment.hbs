<div class='avatar'>
	<img alt="user avatar" src='{{unbound user.avatar}}' width='50px'>
</div>
<div class='content'>
	<span class="timestamp" title="{{format-date comment.created}}">
		{{format-relative comment.created}}
	</span>
	<span class='username'>
		{{#if user.url}}
			<a href='{{unbound user.url}}'>{{unbound userName}}</a>
		{{else}}
			{{unbound userName}}
		{{/if}}
	</span>
	{{{comment.text}}}
	{{#if comment.comments}}
		<button class='show-reply-btn wds-button wds-is-secondary' {{action 'toggleExpand'}}>
			{{t 'article.replies-label' count=comment.comments.length}}
		</button>
		<ul class='{{if isExpanded 'expanded'}}'>
			{{#each comment.comments as |comment|}}
				{{article-comment comment=comment users=users}}
			{{/each}}
		</ul>
	{{/if}}
</div>
