<div id="wikiContainer" class="wiki-container">
  <WikiaUiComponents::WikiPageHeaderCuratedMainPage @showButtons={{this.curatedContentToolButtonVisible}} @title={{this.title}} />
  {{#if @wikiaStats}}
    <WikiaStats @model={{@wikiaStats}} />
  {{/if}}
  {{#if @featuredContent}}
    <FeaturedContent @model={{@featuredContent}} />
  {{/if}}
  {{#if @wikiDescription}}
    <div class="wiki-description">{{@wikiDescription}}</div>
  {{/if}}
  {{#if @curatedContent}}
    <CuratedContent @model={{@curatedContent}} />
  {{/if}}
  {{#if @fullMainPageContent}}
    <FullMainPageContent @content={{@fullMainPageContent}} />
  {{/if}}
  {{#if @trendingArticles}}
    <TrendingArticles @header={{i18n "app.trending-articles-label"}} @model={{@trendingArticles}} />
  {{/if}}
  {{#if @trendingVideos}}
    <TrendingVideos @model={{@trendingVideos}} />
  {{/if}}
</div>
