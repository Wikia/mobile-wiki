<div id="wikiContainer" class="wiki-container">
	{{wikia-ui-components/wiki-page-header-curated-main-page
		showButtons=curatedContentToolButtonVisible
		title=title
	}}
	{{#if wikiaStats}}
		{{wikia-stats model=wikiaStats}}
	{{/if}}
	{{ad-slot isAboveTheFold=true name='NATIVE_PAID_ASSET_DROP' class='main-page-pad-slot'}}
	{{#if featuredContent}}
		{{featured-content model=featuredContent}}
	{{/if}}
	{{#if wikiDescription}}
		{{wiki-description description=wikiDescription}}
	{{/if}}
	{{#if curatedContent}}
		{{curated-content model=curatedContent}}
	{{/if}}
	{{#if trendingArticles}}
		{{trending-articles
			header=(i18n 'app.trending-articles-label')
			model=trendingArticles
		}}
	{{/if}}
	{{#if trendingVideos}}
		{{trending-videos model=trendingVideos openLightbox='openLightbox'}}
	{{/if}}
</div>
