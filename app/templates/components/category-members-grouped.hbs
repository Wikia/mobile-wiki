{{#if prevPage}}
  <div class="category-navigation">
    {{wds-spinner
      active=true
      overlay=false
      radius=16
      strokeWidth=2
    }}
    <a {{action "loadPage" prevPage "previous"}}
      href={{prevPageUrl}}
      class="wds-button wds-is-secondary wds-is-full-width category-navigation__button category-navigation__prev"
    >
      {{i18n "category-page.load-previous"}}
    </a>
  </div>
{{/if}}
{{#each-in membersGrouped as |firstLetter members|}}
  <div>
    <h3>{{firstLetter}}</h3>
    <ul
      class="category-members-grouped__list wds-has-big-items wds-list mw-content"
      onclick={{action "trackClick" "category-page" "open-link"}}
    >
      {{#each members as |category|}}
        <li class={{if category.isCategory "category-members-grouped__subcategory"}}>
          {{#if category.isCategory}}
            {{svg "wds-icons-pages-small" class="wds-icon wds-icon-small"}}
          {{/if}}
          <a href={{category.url}}>{{category.title}}</a>
        </li>
      {{/each}}
    </ul>
  </div>
{{else}}
  <div>{{i18n "category-page.no-members"}}</div>
{{/each-in}}
{{#if nextPage}}
  <div class="category-navigation">
    {{wds-spinner
      active=true
      overlay=false
      radius=16
      strokeWidth=2
    }}
    <a {{action "loadPage" nextPage "next"}}
      href={{nextPageUrl}}
      class="wds-button wds-is-secondary wds-is-full-width category-navigation__button category-navigation__next"
    >
      {{i18n "category-page.load-more"}}
    </a>
  </div>
{{/if}}
{{alert-notifications alerts=alertNotifications}}
