<CuratedContentSection @model={{@model}} @shouldBeVisible={{equal this.activeLabel null}} @openSection={{this.openSection}} />
{{#each @model.items as |item|}}
  {{#if (equal item.type "section")}}
    <CuratedContentSection @shouldBeVisible={{equal this.activeLabel item.label}} @model={{item}} @openSection={{this.openSection}} @closeSection={{this.closeSection}} />
  {{/if}}
{{/each}}
