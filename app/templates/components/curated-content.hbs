<CuratedContentSection @model={{@model}} @shouldBeVisible={{equal this.activeLabel null}} @openSection={{action "openSection"}} />
{{#each @model.items as |item|}}
  {{#if (equal item.type "section")}}
    <CuratedContentSection @shouldBeVisible={{equal this.activeLabel item.label}} @model={{item}} @openSection={{action "openSection"}} @closeSection={{action "closeSection"}} />
  {{/if}}
{{/each}}
