{{#if showChevrons}}
	{{svg 'chevron-linked' viewBox='0 0 5 20' class='chevron chevron-left'}}
	{{svg 'chevron-linked' viewBox='0 0 5 20' class='chevron chevron-right'}}
{{/if}}
{{featured-content-item model=currentItem}}
{{#if hasMultipleItems}}
	<ul class='featured-content-pagination dot-pagination'>
		{{#each model as |item index|}}
			<li data-index='{{index}}'><span></span></li>
		{{/each}}
	</ul>
{{/if}}
