{{! Keep the same HTML structure as in server/app/views/_partials/curated-main-page/stats.hbs }}
<div class="wikia-stats-container">
	{{#each items as |item|}}
		{{#if item.value}}
			<div class="wikia-stats-item">
				{{#if item.url}}
					<a href="{{item.url}}" class="wikia-stats-link" {{action 'trackClick' item.trackingLabel preventDefault=false}} >
						<div class="wikia-stats-label">{{item.label}}</div>
						<div class="wikia-stats-value">{{numeral item.value '0a'}}</div>
					</a>
				{{else}}
					<div class="wikia-stats-label">{{item.label}}</div>
					<div class="wikia-stats-value">{{numeral item.value '0a'}}</div>
				{{/if}}
			</div>
		{{/if}}
	{{/each}}
</div>
