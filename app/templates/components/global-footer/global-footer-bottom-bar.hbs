<div class="wds-global-footer__bottom-bar">
	<div class="wds-global-footer__bottom-bar-row wds-has-padding">
		{{{i18n
			model.licensing_and_vertical.description.key
			sitename=model.licensing_and_vertical.description.params.sitename.value
			vertical=(i18n model.licensing_and_vertical.description.params.vertical.key ns='design-system')
			license=(wrap-me
				model.licensing_and_vertical.description.params.license.title.value
				tagName='a'
				href=model.licensing_and_vertical.description.params.license.href
				trackingLabel=model.licensing_and_vertical.description.params.license.tracking_label
			)
			ns='design-system'
		}}}
	</div>

	<div class="wds-global-footer__bottom-bar-row wds-has-border-top">
		<div role="button" {{action 'fullSiteClicked' preventDefault=false}} rel="nofollow" class="wds-global-footer__button-link wds-is-text wds-button">
			{{i18n 'global-footer-full-site-link' ns='design-system'}}
		</div>
	</div>
</div>
