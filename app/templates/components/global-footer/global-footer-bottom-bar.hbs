<div class="wds-global-footer__bottom-bar">
  <div class="wds-global-footer__bottom-bar-row wds-has-padding">
    {{! template-lint-disable attribute-indentation}}
    {{{i18n
      model.licensing_and_vertical.description.key
      sitename=model.licensing_and_vertical.description.params.sitename.value
      vertical=(i18n model.licensing_and_vertical.description.params.vertical.key ns="design-system")
      ns="design-system"
    }}}
  </div>

  <div
    class="wds-global-footer__bottom-bar-row wds-has-border-top global-footer-full-site-link-wrapper"
  >
    <div {{action "fullSiteClicked" preventDefault=false}}
      role="button"
      rel="nofollow"
      class="wds-global-footer__button-link wds-is-text wds-button"
    >
      {{i18n
        "global-footer-full-site-link"
        ns="design-system"
      }}
    </div>
  </div>
</div>
