{{#if type}}
	<div class="lightbox-header {{if uiHidden 'wds-is-hidden'}}">
		<div class="lightbox-close-wrapper">
			{{#if closeButtonHidden}}
				{{lightboxCloseButtonDelay}}
			{{else}}
				{{svg 'wds-icons-cross' role='img' class='wds-icon wds-icon-small lightbox-close-button'}}
			{{/if}}
		</div>
		<div class="lightbox-header-title">{{header}}</div>
	</div>
	<div class="lightbox-content">
		{{component lightboxComponent
			model=model
			lightboxCloseButtonDelay=lightboxCloseButtonDelay
			setFooter=(action 'setFooter')
			setHeader=(action 'setHeader')
			setCloseButtonHidden=(action 'setCloseButtonHidden')
			setThumbnails=(action 'setThumbnails')
			setCurrentThumbnail=(action 'setCurrentThumbnail')
		}}
		{{#if footer}}
			<div class="lightbox-footer wds-font-size-s {{if uiHidden 'wds-is-hidden'}}">
				{{#if footerHead}}
					<div class="lightbox-footer-head wds-font-weight-bold wds-leading-normal">{{footerHead}}</div>
				{{/if}}
				<div class="lightbox-footer-content-wrapper">
					<div class="lightbox-footer-content mw-content wds-font-weight-normal wds-leading-tight {{if footerExpanded 'expanded'}}">{{footer}}</div>
					{{#if footerLink}}
						<div class="lightbox-footer-link"><a href="{{footerLink}}">{{svg 'wds-icons-link' class='wds-icon wds-icon-small'}}</a></div>
					{{/if}}
				</div>
			</div>
		{{/if}}
	</div>

	{{#if thumbnails}}
		<div class="lightbox-thumbnails-container">
			{{#each thumbnails as |thumbnail|}}
				<img
						class="lightbox-thumbnail lazyload{{if thumbnail.active ' lightbox-thumbnail-active'}}"
						src="data:image/svg+xml;charset=UTF-8,%3csvg xmlns='http://www.w3.org/2000/svg' viewBox='-12 -12 48 48' fill='%23fff' width='44' height='44'%3e%3cg fill-rule='evenodd'%3e%3cpath d='M3 4h18v8.737l-3.83-3.191a.916.916 0 0 0-1.282.108l-4.924 5.744-3.891-3.114a.92.92 0 0 0-1.146 0L3 14.626V4zm19-2H2a1 1 0 0 0-1 1v18a1 1 0 0 0 1 1h20a1 1 0 0 0 1-1V3a1 1 0 0 0-1-1z'/%3e%3cpath d='M9 10c1.1 0 2-.9 2-2s-.9-2-2-2-2 .9-2 2 .9 2 2 2'/%3e%3c/g%3e%3c/svg%3e"
						data-src="{{thumbnail.url}}"
						data-ref="{{thumbnail.ref}}"
				>
			{{/each}}
		</div>
	{{/if}}
{{/if}}
