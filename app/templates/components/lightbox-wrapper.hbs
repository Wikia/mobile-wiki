{{#if type}}
	<div class="lightbox-header {{if headerHidden 'wds-is-hidden'}}">
		<div class="lightbox-close-wrapper">
			{{#if closeButtonHidden}}
				{{lightboxCloseButtonDelay}}
			{{else}}
				{{svg 'wds-icons-cross' role='img' class='wds-icon wds-icon-small lightbox-close-button'}}
			{{/if}}
		</div>
		<div class="lightbox-header-title">{{header}}</div>
	</div>
	<div class="lightbox-content">
		{{component lightboxComponent
			model=model
			lightboxCloseButtonDelay=lightboxCloseButtonDelay
			setFooter=(action 'setFooter')
			setHeader=(action 'setHeader')
			setCloseButtonHidden=(action 'setCloseButtonHidden')
		}}
	</div>
	{{#if footer}}
		<div class="lightbox-footer mw-content wds-font-weight-light {{if footerExpanded 'expanded'}} {{if footerHidden 'wds-is-hidden'}}">{{footer}}</div>
	{{/if}}
{{/if}}
