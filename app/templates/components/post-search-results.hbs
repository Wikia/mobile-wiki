{{#if isEnabled}}
  <aside class="post-search-results">
    <header class="post-search-results__header">
      <div class="post-search-results__header-text wds-midlight-navy">
        <Icon @name="comment" @size="small" />
        {{i18n "main.search-post-items-header"}}
      </div>
      <Button
        @href={{seeMoreLink}}
        @text={{true}}
        class="post-search-results__see-more"
      >
        <span>{{i18n "main.search-post-items-see-more"}}</span>
        <Icon @name="arrow" @size="tiny" />
      </Button>
    </header>
    {{#if isLoaded}}
      {{#each posts as |post|}}
        {{post-search-results-item post=post}}
      {{/each}}
    {{else}}
      <Spinner
        @active={{true}}
        @block={{true}}
        @overlay={{false}}
        @radius={{24}}
        @strokeWidth={{2}}
      />
    {{/if}}
  </aside>
{{/if}}
