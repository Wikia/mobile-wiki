{{#if this.isEnabled}}
  <aside class="post-search-results">
    <header class="post-search-results__header">
      <div class="post-search-results__header-text wds-midlight-navy">
        <Icon @name="comment" @size="small" />
        {{this.heading}}
      </div>
      {{#if this.seeMoreButtonEnabled}}
        <Button
          @href={{this.seeMoreUrl}}
          @text={{true}}
          class="post-search-results__see-more"
          onclick={{this.trackMoreClick}}
        >
          <span>{{{i18n "main.search-post-items-see-more" ns="search"}}}</span>
          <Icon @name="arrow" @size="tiny" />
        </Button>
      {{/if}}
    </header>
    {{#if this.isLoading}}
      <Spinner
        @active={{true}}
        @block={{true}}
        @overlay={{false}}
        @radius={{24}}
        @strokeWidth={{2}}
        class="post-search-results__loading"
      />
    {{else}}
      <div class="post-search-results__items">
        {{#each this.posts as |post index|}}
          {{#if (equal post.type "affiliate")}}
            <PostSearchResultsAffiliateItem @affiliateUnit={{@unit}} @postIndex={{index}} @isInContent={{this.isInContent}} />
          {{else}}
            <PostSearchResultsItem @post={{post}} @postIndex={{index}} />
          {{/if}}
        {{else}}
          <div class="post-search-results__no-posts">
            {{{i18n "main.search-post-item-no-posts" ns="search"}}}
          </div>
        {{/each}}
      </div>
    {{/if}}
    {{#if this.showPostSearchResultsDisclaimer}}
      <div class="post-search-results__disclaimer">
        {{i18n "affiliate-unit.disclaimer"}}
      </div>
    {{/if}}
  </aside>
  <div class="post-search-results__slant"></div>
{{/if}}
