{{#if isEnabled}}
  <aside class="post-search-results">
    <header class="post-search-results__header">
      <div class="post-search-results__header-text wds-midlight-navy">
        <Icon @name="comment" @size="small" />
        Related Posts
      </div> 
      <Button
        @href={{seeMoreLink}}
        @text={{true}}
        class="post-search-results__see-more"
      >
        <span>See more</span>
        <Icon @name="arrow" @size="tiny" />
      </Button>
    </header>
    {{#if isLoaded}}
      {{#each posts as |post|}}
        <div class="post-search-results__item">
          {{#if post.image}}
            <img
              class="post-search-results__item__image"
              src={{post.image}}
            />
          {{/if}}
          <a
            href={{post.url}}
            class="post-search-results__item__title"
          >
            {{post.title}}
          </a>
          <div class="post-search-results__item__details">
            <Icon @name="quiz" @size="tiny" />
            {{post.takers}} takers
          </div>
        </div>
      {{/each}}
    {{else}}
      <Spinner
        @active={{true}}
        @block={{true}}
        @overlay={{false}}
        @radius={{24}}
        @strokeWidth={{2}}
      />
    {{/if}}
  </aside>
{{/if}}
