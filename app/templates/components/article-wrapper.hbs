<WikiaUiComponents::WikiPageHeader @title={{@model.displayTitle}} @subtitle={{@wikiPageHeaderSubtitle}} @heroImage={{this.heroImageInHeader}} />

{{#if this.hasFeaturedVideo}}
  <ArticleFeaturedVideo @model={{@model.featuredVideo}} @hasPortableInfobox={{@model.hasPortableInfobox}} />
{{/if}}

<section class="article-body">
  {{#if @model.fileThumbnail}}
    <ArticleMediaThumbnail @model={{@model.fileThumbnail}} @shouldBeLoaded={{true}} />
  {{/if}}
  {{#if this.smallHeroImage}}
    <PortableInfoboxHeroImageSmall @heroImage={{this.smallHeroImage}} />
  {{/if}}
  <ArticleContent @adsContext={{@model.adsContext}} @content={{@model.content}} @displayEmptyArticleInfo={{this.displayEmptyArticleInfo}} @displayTitle={{@model.displayTitle}} @featuredVideo={{@model.featuredVideo}} @forceFeaturedVideoVisibility={{action "forceFeaturedVideoVisibility"}} @heroImage={{this.heroImage}} @id={{@model.id}} @media={{@model.media}} @data-test-article-content={{true}} @debugAffiliateUnits={{@model.debugAffiliateUnits}} />
</section>
{{yield}}
{{#if this.displayArticleWrapper}}
  <section class="article-footer">
    <div class="article-information-header">
      <h2
        class="wds-font-size-base wds-font-weight-bold wds-text-transform-uppercase wds-midlight-navy"
      >
        {{i18n "article.article-information"}}
      </h2>
    </div>
    <WikiaUsers @users={{@model.topContributors}} @class="article-footer-item" />
    {{#if this.showComments}}
      <ArticleComments @articleId={{@model.id}} @commentsCount={{@model.comments}} @page={{this.commentsPage}} @class="article-footer-item" />
    {{/if}}
    {{#if @model.categories}}
      <CollapsibleMenu @observe={{@model.displayTitle}} @ordered={{false}} @tLabel="article.categories-list-label" @trackingEvent="category-menu" @click={{action "trackClick" "category-menu" "open-category"}} @class="article-categories-list article-footer-item mw-content">
        {{#each @model.categories as |category|}}
          <li>
            <a
              href={{category.url}}
              title={{category.title}}
              class="wds-font-size-s wds-text-transform-capitalize wds-leading-loose"
            >
              {{category.title}}
            </a>
          </li>
        {{/each}}
      </CollapsibleMenu>
    {{/if}}
    {{#if @model.languageLinks}}
      <CollapsibleMenu @observe={{@model.displayTitle}} @ordered={{false}} @tLabel="article.language-links-label" @trackingEvent="language-links" @class="article-language-links-list article-footer-item">
        {{#each @model.languageLinks as |lang|}}
          <li>
            <a
              href={{lang.href}}
              title={{lang.text}}
              class="wds-font-size-s wds-text-transform-capitalize wds-leading-loose"
            >
              {{lang.text}}
            </a>
          </li>
        {{/each}}
      </CollapsibleMenu>
    {{/if}}
    <div class="license-description wds-font-size-s wds-leading-tight">
      {{{i18n "license-description" ns="design-system" license=(wrap-me this.wikiVariables.licenseText tagName="a" href=this.wikiVariables.licenseUrl className="wds-font-weight-medium")}}}
    </div>
  </section>
{{/if}}
