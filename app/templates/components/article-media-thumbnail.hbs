{{! This wrapper is required so the chevron is positioned correctly }}
<div class="article-media-thumbnail-image-wrapper">
	{{svg 'wds-icons-image' role='img' class='wds-icon'}}

	{{#if hasThumbnail}}
		<a href="{{model.href}}">
			<img class="article-media-placeholder lazyload"
				 alt="{{model.title}}"
				 src="data:image/svg+xml;charset=utf-8,%3Csvg xmlns%3D'http%3A%2F%2Fwww.w3.org%2F2000%2Fsvg' viewBox%3D'0 0 {{model.width}} {{model.height}}'%2F%3E"
				 data-src="{{model.thumbnailUrl}}"
				 data-srcset="{{model.srcset}}"
				 data-sizes="auto"
				 height="{{model.height}}"
				 width="{{model.width}}">
		</a>

		{{#if isVideo}}
			<div class="article-media-thumbnail__play-icon">
				{{svg 'wds-player-icon-play' class='wds-player-icon-play-medium'}}
			</div>
		{{/if}}
	{{else}}
		<a href="{{model.href}}">{{svg 'wds-icons-download' class='wds-icon'}}</a>
	{{/if}}

</div>
{{! Allow custom captions }}
{{#if hasBlock}}
	{{yield}}
{{else}}
	{{#if hasFigcaption}}
		<figcaption>
			{{#if showTitle}}
				<div>{{model.title}}</div>
			{{/if}}
			{{{model.caption}}}
		</figcaption>
	{{/if}}
{{/if}}
