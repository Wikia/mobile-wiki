<div role="button" {{action 'toggleMenu'}} class="{{if isCollapsed 'collapsed'}} title wds-font-bold">
	<span>{{i18n tLabel count=tCount}}</span>
	{{svg 'wds-icons-menu-control-tiny' class='wds-icon wds-icon-tiny chevron'}}
</div>
{{#if ordered}}
	<ol>
		{{yield}}
	</ol>
{{else}}
	<ul>
		{{yield}}
	</ul>
{{/if}}
