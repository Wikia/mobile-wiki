<ul class="wikia-card-list">
  {{#each @items as |item key|}}
    <li class="wikia-card" {{on "click" (fn this.onItemClick item)}}>
      <a href={{{ item.url }}} class="wikia-card__item wds-font-size-s wds-leading-tight">
        <div class="wikia-card__title wds-font-weight-medium">
          {{item.title}}
        </div>
        <div class="wikia-card__snippet wds-font-size-xs">{{item.snippet}}</div>
        <div class="wikia-card__community_name wds-font-size-xs">{{item.sitename}}</div>
      </a>
    </li>
    {{#if @includePostsForQuery}}
      {{#if (equal key 1)}}
        <PostSearchInterrupt @query={{@includePostsForQuery}} @isCrossWiki={{true}} @debugAffiliateUnits={{@debugAffiliateUnits}} />
      {{/if}}
    {{/if}}
  {{/each}}
</ul>
