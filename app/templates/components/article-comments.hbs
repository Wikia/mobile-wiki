<div role="button" {{action 'toggleComments'}} class='show-comments-btn {{if isCollapsed 'collapsed'}}'>
	<span>{{t 'article.comments-label' count=commentsCount}}</span>
	{{svg 'wds-icons-menu-control-tiny' class='wds-icon wds-icon-tiny'}}
</div>
{{#if showComments}}
	{{#if commentsCount}}
		<button class='wds-button page-button {{unless prevButtonShown 'wds-is-hidden'}}' {{action 'prevPage'}}>
			{{t 'article-comments.prev-button'}}
		</button>
		<ul class='comments {{if commentsHidden 'wds-is-hidden'}}'>
			{{#each model.comments as |comment|}}
				{{article-comment comment=comment users=model.users}}
			{{/each}}
		</ul>
		<button class='wds-button page-button {{unless nextButtonShown 'wds-is-hidden'}}' {{action 'nextPage'}}>
			{{t 'article-comments.next-button'}}
		</button>
	{{else}}
		<div class="comments__no-comments">
			{{svg 'wds-icons-reply' class='wds-icon comments__reply-icon'}}
			<div>{{t 'article-comments.no-comments'}}</div>
		</div>
	{{/if}}

	<div class='comments__add-comment'>
		<a href='?useskin=oasis#WikiaArticleComments' class='wds-button wds-is-secondary wds-is-squished'>
			{{t 'article-comments.add-comment'}}
		</a>
		<div class='comments__message'>{{t 'article-comments.desktop-warning'}}</div>
	</div>
{{/if}}
