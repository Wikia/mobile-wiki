<div {{on "click" this.toggleComments}}
  role="button"
  class="show-comments-btn wds-font-size-s wds-font-weight-medium wds-text-transform-capitalize {{if this.isCollapsed "collapsed"}}"
>
  <span>{{i18n "article.comments-label" count=@commentsCount}}</span>
  <Icon @name="menu-control" @size="tiny" class="chevron" />
</div>
{{#if this.showComments}}
  {{#if @commentsCount}}
    <ul class="comments wds-font-size-xs {{if this.commentsHidden "wds-is-hidden"}}">
      {{#each this.comments as |comment|}}
        <ArticleComment @comment={{comment}} @users={{this.users}} />
      {{/each}}
    </ul>
    <div class="comments__navigation">
      <Button
        class="page-button prev-page-button"
        @onClick={{this.prevPage}}
        @disabled={{this.prevButtonDisabled}}
        @secondary={{true}}
        @square={{true}}
      >
        <Icon @name="menu-control" @size="tiny" />
      </Button>

      <Button
        class="page-button next-page-button"
        @onClick={{this.nextPage}}
        @disabled={{this.nextButtonDisabled}}
        @secondary={{true}}
        @square={{true}}
      >
        <Icon @name="menu-control" @size="tiny" />
      </Button>
    </div>
  {{else}}
    <div class="comments__no-comments wds-font-size-s">
      <Icon @name="comment" class="comments__reply-icon" />
      <div>{{i18n "article-comments.no-comments"}}</div>
    </div>
  {{/if}}

  <div class="comments__add-comment">
    <Button @href="?useskin=oasis#WikiaArticleComments">
      {{i18n "article-comments.add-comment"}}
    </Button>

    <div
      class="comments__message wds-font-size-xs wds-font-style-italic wds-leading-tight"
    >
      {{i18n "article-comments.desktop-warning"}}
    </div>
  </div>
{{/if}}
