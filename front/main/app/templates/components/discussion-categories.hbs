{{#unless isEditMode}}
	{{discussion-categories-list
		allCategorySelected=allCategorySelected
		categoriesInputIdPrefix=categoriesInputIdPrefix
		canEditCategories=canEditCategories
		collapsed=collapsed
		disabled=disabled
		localCategories=localCategories
		selectAllCategory=(action 'selectAllCategory')
		onCategoryClick=(action 'onCategoryClick')
		reset=(action 'reset')
		setEditMode=(action 'setEditMode')
		toggle=(action 'toggle')
		toggleButtonLabel=toggleButtonLabel
		toggleButtonVisible=toggleButtonVisible
		toggleMore=(action 'toggleMore')
		visibleCategoriesCount=visibleCategoriesCount
	}}
{{/unless}}

{{#if isEditMode}}
	{{discussion-categories-edit
		localCategories=localCategories
		setEditMode=(action 'setEditMode')
		updateCategories=(action this.attrs.updateCategories)
	}}

	{{wikia-ui-components/highlight-overlay
		isVisible=isEditMode
	}}
{{/if}}
