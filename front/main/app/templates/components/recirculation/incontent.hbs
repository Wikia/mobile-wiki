{{#if items.length}}
	<section class="vertical">
		<h2>{{{model.title}}}</h2>
		<ul class="thumbnails">
			{{#each items as |item|}}
				<li class="title-thumbnail" {{action 'trackExperimentClick' item.url}}>
					<a href="{{if externalLink '' item.url}}">
						<div class="image image-thumbnail">
							{{#if shouldBeLoaded }}
								{{#if item.thumbnail }}
									<img src="{{item.thumbnail}}" alt="{{item.title}}">
								{{/if}}
							{{/if}}
						</div>
						<p class="title">{{item.title}}</p>
					</a>
				</li>
			{{/each}}
		</ul>

		{{#if model.moreHref}}
			<a class="button secondary" href="{{model.moreHref}}">View All</a>
		{{/if}}
	</section>
{{/if}}

{{#if isLoading}}
	{{loading-spinner active=isLoading }}
{{/if}}
