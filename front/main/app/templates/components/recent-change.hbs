{{#link-to 'articleDiff' model.old_revid model.revid class='recent-change__see-diff'}}
	{{svg 'back-arrow' role='img' class='icon-back'}}
{{/link-to}}

{{user-avatar
	avatarUrl=model.useravatar
	username=model.user
	displayProfileName=true
}}
<small class="recent-change__time-ago">{{time-ago unixTimestamp}}</small>
<h3 class="recent-change__article-title">
	{{#link-to 'article' model.title}}{{model.title}}{{/link-to}}
</h3>
{{#if model.parsedcomment}}
	<small class="recent-change__summary">
		<strong class="recent-change__summary__label">{{i18n 'main.summary' ns='recent-wiki-activity'}}</strong> {{{model.parsedcomment}}}
	</small>
{{/if}}
