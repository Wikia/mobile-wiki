<div class="img-container {{model.status}}">
	<img src="{{thumbnailUrl}}" {{action this.attrs.showModal model}}>
	<form class="image-review-button-group">
		<button class="button-group-item {{if isAccepted 'highlighted' 'inactive'}}"
			{{action (action this.attrs.changeItemModel model.imageId 'accepted')}}>
			{{i18n 'main.status-accepted' ns='image-review'}}
		</button>
		<button class="button-group-item {{if isRejected 'highlighted' 'inactive'}}"
			{{action (action this.attrs.changeItemModel model.imageId 'rejected')}}>
			{{i18n 'main.status-rejected' ns='image-review'}}
		</button>
		<button class="button-group-item {{if isFlagged 'highlighted' 'inactive'}}"
			{{action (action this.attrs.changeItemModel model.imageId 'flagged')}}>
			{{i18n 'main.status-flagged' ns='image-review'}}
		</button>
	</form>
</div>
