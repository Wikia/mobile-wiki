{{#if this.attrs.close}}
	<a class="og-close" {{action 'close'}}>
		{{svg 'close' viewBox='0 0 18 18'}}
	</a>
{{/if}}

{{#if openGraphData.imageUrl}}
	<img class="og-image" src="{{openGraphData.imageUrl}}" alt="{{openGraphData.title}}">
{{/if}}
<div class="og-title">
	{{openGraphData.title}}
</div>
<div class="og-site-name">
	{{siteName}}
</div>
{{loading-spinner
	active=isLoading
}}
