</fieldset>

{{#if isLoading}}
	{{loading-spinner
		active=isLoading
		class='categories-loading-overlay'
		radius=32
		strokeWidth=2
	}}
{{/if}}

{{#if showSuccess}}
	<div class="categories-loading-overlay loading-overlay">
		{{svg 'success' class='success' viewBox='0 0 80 80'}}
	</div>
{{/if}}

