{{#if model.showSubHeader}}
	<header class="sub-head">
		<div class="sub-head--title">
			{{i18n 'main.head' ns='image-review'}}
			{{#if model.userCanAuditReviews}}
				<button {{action this.attrs.getAllWithStatus 'UNREVIEWED'}} class="sub-head--done">
					{{i18n 'main.get-unreviewed' ns='image-review'}}
				</button>
				<button {{action this.attrs.getAllWithStatus 'QUESTIONABLE'}} class="sub-head--done">
					{{i18n 'main.get-questionable' ns='image-review'}}
				</button>
				<button {{action this.attrs.getAllWithStatus 'REJECTED'}} class="sub-head--done">
					{{i18n 'main.get-rejected' ns='image-review'}}
				</button>
			{{/if}}
		</div>
		{{#if model.userCanAuditReviews}}
			<button {{action this.attrs.openSummary}} class="sub-head--done">
				{{i18n 'main.show-summary' ns='image-review'}}
			</button>
		{{/if}}
		{{#if model.images}}
			<button {{action this.attrs.reviewAndGetMoreImages imageOrder}} class="sub-head--done">
				{{i18n 'main.review-and-get-more' ns='image-review'}}
			</button>
			<div class="sub-head--done">
				<ul class="image-order-options">
					<li id="image-order-newest-top"
						{{action this.attrs.changeImageOrder 'NEWEST'}} class={{if newestImages 'image-order--selected' 'image-order'}}>
						{{i18n 'main.image-order-newest' ns='image-review'}}
					</li>
					<li id="image-order-oldest-top"
						{{action this.attrs.changeImageOrder 'OLDEST'}} class={{if oldestImages 'image-order--selected' 'image-order'}}>
						{{i18n 'main.image-order-oldest' ns='image-review'}}
					</li>
				</ul>
			</div>
		{{/if}}
	</header>
{{/if}}

<div class="image-review-content">
	{{#if model.images}}
		<div class="image-review-text">
			<p>{{i18n 'main.description' ns='image-review'}}</p>
			<p>
				{{#if model.userCanAuditReviews}}
					<strong>{{model.status}}</strong>
				{{/if}}
			</p>
			<p>
				{{i18n 'main.images-to-review-count' ns='image-review'}}
				{{#if model.imagesToReviewCount}}
					<strong>{{model.imagesToReviewCount}}</strong>
				{{else}}
					{{i18n 'main.waiting-for-count' ns= 'image-review'}}
				{{/if}}

			</p>
		</div>
		<ul class="image-review-list">
			{{#each model.images as |item|}}
				<li class="image-review-item">
					{{image-review-item model=item
															showModal=(action 'showModal')
															isRejectedQueue=model.isRejectedQueue
															changeItemModel=(action (action this.attrs.changeItemModel))}}
				</li>
			{{/each}}
		</ul>

	{{else}}
		<h2>{{i18n 'main.error-no-more-images' ns='image-review'}}</h2>
	{{/if}}

		{{#if model.images }}
			<div class="image-review-get-more-button">
				<button {{action this.attrs.reviewAndGetMoreImages 'NEWEST'}}>
					{{i18n 'main.review-and-get-more' ns='image-review'}}
				</button>
				<ul class="image-order-options">
					<li id="image-order-newest-bottom"
						{{action this.attrs.changeImageOrder 'NEWEST'}} class={{if newestImages 'image-order--selected' 'image-order'}}>
						{{i18n 'main.image-order-newest' ns='image-review'}}
					</li>
					<li id="image-order-oldest-bottom"
						{{action this.attrs.changeImageOrder 'OLDEST'}} class={{if oldestImages 'image-order--selected' 'image-order'}}>
						{{i18n 'main.image-order-oldest' ns='image-review'}}
					</li>
				</ul>
			</div>
		{{/if}}

</div>
{{#modal-dialog isVisible=isModalVisible}}
	{{image-review-image-details thumbnailModel=thumbnailModel class='image-review-image-details'}}
{{/modal-dialog}}
