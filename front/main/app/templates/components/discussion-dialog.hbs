{{#if isVisible}}
	{{#modal-dialog
		isVisible = isVisible
	}}
		<div class="modal-dialog-content">{{i18n dialogMessage ns='discussion'}}</div>
		<footer>
			{{#if isConfirm}}
			 	<button class="active-element-theme-color" {{action 'confirm'}}>{{i18n 'main.modal-dialog-confirm' ns='discussion'}}</button>
				<button class="active-element-theme-color" {{action 'close'}}>{{i18n 'main.modal-dialog-cancel' ns='discussion'}}</button>
			{{else}}
				<button class="active-element-theme-color" {{action 'close'}}>{{i18n 'main.modal-dialog-confirm' ns='discussion'}}</button>
			{{/if}}
			{{#unless currentUser.isAuthenticated}}
				<button class="active-element-theme-color" {{action 'goToLoginPage'}}>{{i18n 'main.modal-dialog-log-in' ns='discussion'}}</button>
			{{/unless}}
		</footer>
	{{/modal-dialog}}
{{/if}}
