<div class="discussion-hero-unit-content {{contentClassNames}}">
	{{#if userName}}
		{{discussion-post-list-header
			userName=userName
			contributors=contributors.users
			numberOfPosts=numberOfPosts
		}}
	{{else}}
		<h1>{{i18n 'main.discussions-header-title' ns='discussion'}}</h1>
		{{#if numberOfPosts}}
			<p>{{i18n 'main.number-of-posts' numberOfPosts=numberOfPosts ns='discussion'}}</p>
		{{/if}}
		{{#if contributors}}
			{{discussion-contributors
				contributors=contributors.users
				maxContributorDisplayCount=6
				totalContributorCount=contributors.count
			}}
		{{/if}}
	{{/if}}
</div>
