<div class="wds-user-profile__fixed-wrapper">
	<div class="wikia-nav__header">
		<a {{action 'getBack' preventDefault=false}}
				class="wikia-nav__back wds-user-profile__back-link">
			{{svg 'wds-icons-menu-control' viewBox='0 0 24 24' class='icon wds-menu-chevron'}}
		</a>
		<a {{action 'trackClick' 'side-nav' 'open-logout' preventDefault=false}}
				href="{{unbound logoutLink}}"
				class="wikia-nav--external wikia-nav--logout">
			{{i18n 'navigation.user-menu-log-out'}}
		</a>
	</div>

	<header class="wds-user-profile__header-wrapper">
		{{user-avatar
				username=username
				avatarUrl=currentUser.avatarPath
		}}
		<h4 class="wds-user-profile__username">{{username}}</h4>
	</header>

	<div class="wds-user-profile__notification-title-wrapper">
		<h5 class="wds-user-profile__notification-title">{{i18n 'notifications-notifications' ns='design-system'}}</h5>
		{{#if notificationsList.length}}
			<a class="wds-notifications__mark-all-as-read" {{action 'markAllAsRead'}}>
				{{i18n 'notifications-mark-all-as-read' ns='design-system'}}
			</a>
		{{/if}}
	</div>
</div>


<div class="wds-user-profile__scrollable-wrapper scrolling-part">
	{{#if notificationsList.length}}
		<ul class="wds-notifications__notification-list wds-list wds-has-lines-between">
			{{#each notificationsList as |notification|}}
				{{notification-card
						model=notification
				}}
			{{/each}}
		</ul>
		{{#if isLoadingNewResults }}
			<div class="spinner-container">
				{{loading-spinner
						active=true
						isBlock=true
						isThemed=false
						overlay=false
						radius=15
						strokeWidth=2
				}}
			</div>
		{{/if}}
	{{else}}
		<p class="wds-notifications__zero-state">
			{{i18n 'notifications-no-notifications-message' ns='design-system'}}
		</p>
	{{/if}}
</div>
