<ul class="row post-actions">
	{{discussion-upvote-post
		post=post
		upvote=(action this.attrs.upvote)
	}}

	<li class='small-4 large-4 replies replies-area' {{action 'openEditor'}}>
		{{#link-to 'discussion.post' threadId tagName=(if isDetailsView 'div' 'a') disabled=isDetailsView}}
			{{svg 'comments' viewBox='0 0 24 19' class='icon replies'}}
			{{i18n 'main.reply-label' ns='discussion'}}
		{{/link-to}}
	</li>
	<li class="small-4 large-4 share">
		{{#unless isDeleted }}
			{{discussion-share
				entryPointLabel=(i18n 'main.share-label' ns='discussion')
				header=(i18n 'main.share-header' ns='discussion')
				sharedUrl=sharedUrl
				showLabelOnMobile=true
				uniqueIdentifier=post.threadId
			}}
		{{/unless}}
	</li>
</ul>
