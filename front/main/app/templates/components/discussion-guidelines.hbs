{{#modal-dialog
	class='is-bare is-desktop-centered discussion-editor-dialog'
	closeOnOverlayClick=false
	isVisible=editEditorActive
}}
	{{discussion-edit-editor-guidelines
		editGuidelines=(action this.attrs.editGuidelines)
	}}
{{/modal-dialog}}
{{discussion-hero-unit
	headerTitle=(i18n 'main.guidelines-header-title'  ns='discussion')
}}
<div class="guidelines-page">
	<div class="head">
		<h2 class="wiki-name">{{wikiName}}</h2>
		<a class="guidelines-edit-link active-element-theme-color" {{action 'openGuidelinesEditor'}}>
			{{i18n 'main.edit-guidelines' ns='discussion'}}
			{{svg 'pencil' viewBox='0 0 18 18' class='icon fill-theme-color'}}
		</a>
	</div>
	<div class="guidelines-text">
		{{{parsedContent}}}
	</div>
</div>
