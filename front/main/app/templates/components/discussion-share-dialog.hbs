{{#if show}}
	<a {{action close}} class="icon-close-active-area">
		{{svg 'close-small' class='icon-close'}}
	</a>
	<h3>{{i18n 'main.share-header' ns='discussion'}}</h3>
	<section class="modal-dialog-content">
		{{#each currentSocialNetworks as |currentSocialNetwork|}}
			<a {{action 'share' currentSocialNetwork}} href="#" class="social {{currentSocialNetwork}}">
				{{svg (concat 'wds-icons-' currentSocialNetwork) class='icon'}}
			</a>
		{{/each}}
	</section>
{{/if}}
