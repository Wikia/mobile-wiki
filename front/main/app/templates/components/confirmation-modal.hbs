<div class="confirmation-message">
    <header class="sub-head">
        <button {{action 'close'}} class="sub-head--cancel">
            {{svg 'back-arrow' role='img' class='icon'}}
        </button>
        <div class="sub-head--title"></div>
        <button {{action 'undo'}} class="sub-head--done">{{i18n 'main.undo-label' ns='recent-wiki-activity'}}</button>
    </header>
	{{textarea class='confirmation-message__textarea' value=bodyText placeholder=(i18n 'main.undo-confirmation-placeholder' ns='recent-wiki-activity')}}
</div>
