<div class="wds-dropdown {{if isDropdownActive 'wds-is-active'}}">
	<div class="wds-dropdown__toggle" {{action 'openDropdown'}}>
		<span>{{i18n 'user-activity.days-count' numberOfDays=days ns='discussion'}}</span>
		<svg class="wds-icon wds-icon-small wds-dropdown__toggle-chevron">
			<use xmlns:xlink="http://www.w3.org/1999/xlink" xlink:href="#wds-icons-dropdown"></use>
		</svg>
	</div>
	<div class="wds-dropdown__content">
		<ul class="wds-list">
			<li {{action 'setDays' 30}}>{{i18n 'user-activity.days-count' numberOfDays=30 ns='discussion'}}</li>
			<li {{action 'setDays' 90}}>{{i18n 'user-activity.days-count' numberOfDays=90 ns='discussion'}}</li>
		</ul>
	</div>
</div>
