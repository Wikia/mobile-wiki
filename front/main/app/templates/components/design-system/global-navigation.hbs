<div id="globalNavigation" class="wds-global-navigation{{if isGlobalNavigationPositionFixed ' is-fixed'}}{{if searchIsActive ' wds-search-is-active'}}{{unless model.fandom_overview ' wds-search-is-always-visible'}}">
	<div class="wds-global-navigation__content-bar">
		<a href="{{model.logo.module.main.href}}" class="wds-global-navigation__logo"  {{action 'trackClick' model.logo.module.main.tracking_label preventDefault=false}}>
			{{svg model.logo.module.main.image-data.name class=(concat 'wds-global-navigation__logo-image wds-is-' model.logo.module.main.image-data.name)}}
			{{#if model.logo.module.tagline}}
				{{svg model.logo.module.tagline.image-data.name class=(concat 'wds-global-navigation__logo-image wds-is-' model.logo.module.tagline.image-data.name)}}
			{{/if}}
		</a>
		<div class="wds-global-navigation__links-and-search">
			{{#each model.fandom_overview.links as |link|}}
				{{design-system.global-navigation-link-branded
					model=link
					trackClick=(action 'trackClick')
				}}
			{{/each}}
			{{design-system.global-navigation-links
				model=model.wikis
				trackClick=(action 'trackClick')
				type='wikis-menu'
				onClose=(action 'onDropdownClose')
				onOpen=(action 'onDropdownOpen')
			}}
			{{design-system.global-navigation-search
				model=model.search.module
				activateSearch='activateSearch'
				deactivateSearch='deactivateSearch'
			}}
		</div>
		{{#if model.user}}
			{{design-system.global-navigation-links
				dropdownRightAligned=true
				model=model.user
				trackClick=(action 'trackClick')
				type='user-menu'
				onClose=(action 'onDropdownClose')
				onOpen=(action 'onDropdownOpen')
			}}
		{{else if model.anon}}
			{{design-system.global-navigation-account-navigation
				model=model.anon
				trackClick=(action 'trackClick')
				onClose=(action 'onDropdownClose')
				onOpen=(action 'onDropdownOpen')
			}}
		{{/if}}
		<div class="wds-global-navigation__start-a-wiki">
			<a href="{{model.create_wiki.header.href}}" class="wds-global-navigation__start-a-wiki-button wds-button wds-is-squished wds-is-secondary" {{action 'trackClick' model.create_wiki.header.tracking_label preventDefault=false}}>
				<span class="wds-global-navigation__start-a-wiki-caption">{{i18n model.create_wiki.header.title.key ns='design-system'}}</span>
				{{svg 'wds-icons-plus' class='wds-global-navigation__start-a-wiki-icon wds-icon'}}
			</a>
		</div>
	</div>
	{{#if model.partner_slot}}
		<div class="wds-global-navigation__partner-slot">
			<a href="{{model.partner_slot.href}}" class="wds-global-navigation__partner-slot-link" {{action 'trackClick' model.partner_slot.tracking_label preventDefault=false}}>
				<img src="{{model.partner_slot.image-data.url}}" class="wds-global-navigation__partner-slot-image" alt="{{model.partner_slot.title.value}}"/>
			</a>
		</div>
	{{/if}}
</div>
