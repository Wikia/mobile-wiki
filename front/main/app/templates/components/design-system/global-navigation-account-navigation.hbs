{{#design-system.wds-dropdown
	class='wds-global-navigation__account-menu'
	onClose=this.attrs.onClose
	onOpen=this.attrs.onOpen
	as |dropdown|
}}
	{{#dropdown.toggle class='wds-global-navigation__dropdown-toggle'}}
		{{svg model.header.image-data.name class='wds-icon wds-icon-small'}}
		<span class="wds-global-navigation__account-menu-caption">{{i18n model.header.title.key ns='design-system'}}</span>
	{{/dropdown.toggle}}
	{{#dropdown.content
		class='wds-global-navigation__dropdown-content'
		dropdownRightAligned=true
	}}
		<ul class="wds-list wds-has-lines-between">
			{{#each model.links as |link|}}
				<li>
					{{design-system.global-navigation-link-authentication
						model=link
						trackClick=this.attrs.trackClick
					}}
				</li>
			{{/each}}
		</ul>
	{{/dropdown.content}}
{{/design-system.wds-dropdown}}
