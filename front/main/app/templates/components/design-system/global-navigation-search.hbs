<div class="wds-global-navigation__search-input-wrapper wds-dropdown {{if hasSuggestions 'wds-is-active'}}">
	<label class="wds-dropdown__toggle wds-global-navigation__search-label">
		{{svg 'wds-icons-magnifying-glass' class='wds-icon wds-icon-small wds-global-navigation__search-label-icon'}}
		{{one-way-input
			value=query
			class='wds-global-navigation__search-input'
			name=model.results.param-name
			placeholder=searchPlaceholder
			type='search'
			autocomplete='off'
			update=(action (mut query))
			focusIn=(action 'focusSearch')
		}}
	</label>
	<button class="wds-button wds-is-text wds-global-navigation__search-close" type="reset" {{action 'closeSearch' preventDefault=false}}>
		{{svg 'wds-icons-cross' class='wds-icon wds-icon-small wds-global-navigation__search-close-icon'}}
	</button>
	<div class="wds-dropdown__content wds-global-navigation__search-suggestions">
		<ul class="wds-list wds-has-ellipsis wds-is-linked">
			{{#each suggestions as |suggestion|}}
				<li>
					<a href="/{{suggestion.uri}}" class="wds-global-navigation__dropdown-link external" {{action 'searchSuggestionClick'}}>
						{{{suggestion.text}}}
					</a>
				</li>
			{{/each}}
		</ul>
	</div>
</div>
<button class="wds-button wds-global-navigation__search-submit" type="submit" disabled={{emptyQuery}}>
	{{svg 'wds-icons-arrow' class='wds-icon wds-icon-small wds-global-navigation__search-submit-icon'}}
</button>
