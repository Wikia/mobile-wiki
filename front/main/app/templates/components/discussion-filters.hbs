<form name="discussion-filters">
	{{#if showApplyButton}}
		<div class="filters-apply-container header-text-theme-color">
			<input type="submit" class="filters-apply" value="{{i18n 'main.sort-by-apply' ns='discussion'}}" {{action 'applyFilters'}}>
		</div>
	{{/if}}
	{{#if showSortSection}}
		<fieldset>
			<legend>{{i18n 'main.sort-by-header' ns='discussion'}}</legend>
			<ul class="sort-options">
				{{#each discussionSort.sortTypes as |item|}}
					<li>
						<input type="radio" value="{{item.name}}" {{action 'setSortBy' item.name}} name="sort-button" class="bullet" id="sort-button-{{item.messageKey}}">
						<div class="radio-fancy {{if (equal item.name sortBy) 'active active-element-background-color'}}"><div class="inside"></div></div>
						<label for="sort-button-{{item.messageKey}}">
							{{i18n item.messageKey ns='discussion'}}
						</label>
					</li>
				{{/each}}
			</ul>
		</fieldset>
	{{/if}}
	{{#if canModerate}}
		<fieldset>
			<legend>{{i18n 'main.moderation-filters-header' ns='discussion'}}</legend>
			<label class="moderation-checkbox-label">
				<span class="fancy-checkbox {{onlyReportedClassName}}">
					{{input type='checkbox' checked=onlyReported change=(action 'toggleOnlyReported')}}
					{{#if onlyReported}}
						{{svg 'checkbox-checkmark' class='icon' viewBox="0 0 20 14"}}
					{{/if}}
				</span>
				{{i18n 'main.reported-content-filter-text' ns='discussion'}}
			</label>
		</fieldset>
	{{/if}}
</form>
