<figure class="avatar">
	{{#if avatarUrl}}
		{{#if shouldWrapInHref}}
			<a class="user-avatar__link" href="{{profileUrl}}">
				<img class="user-avatar__image" src="{{avatarUrl}}" title="{{displayName}}" alt="{{displayName}}">
			</a>
		{{else}}
			<img src="{{avatarUrl}}" title="{{displayName}}" alt="{{displayName}}">
		{{/if}}
	{{else}}
		{{svg 'avatar' viewBox='0 0 40 40' class='icon'}}
	{{/if}}
</figure>
{{#if displayProfileName}}
	{{#if shouldWrapInHref}}
		<a href="{{profileUrl}}" class="avatar-username">{{displayName}}</a>
	{{else}}
		<span class="avatar-username">{{displayName}}</span>
	{{/if}}
{{/if}}
