<figure class="avatar">
	{{#if avatarUrl}}
		{{#if shouldWrapInHref}}
			<a href="{{profileUrl}}">
				<img src="{{avatarUrl}}">
			</a>
		{{else}}
			<img src="{{avatarUrl}}">
		{{/if}}
	{{else}}
		{{svg 'avatar' viewBox='0 0 40 40' class='icon'}}
	{{/if}}
</figure>
{{#if displayProfileName}}
	{{#if shouldWrapInHref}}
		<a href="{{profileUrl}}" class="avatar-username">{{profileName}}</a>
	{{else}}
		<span class="avatar-username">{{i18n "app.username-anonymous"}}</span>
	{{/if}}
{{/if}}
