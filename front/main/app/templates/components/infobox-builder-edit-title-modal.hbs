<div class="modal-text-area">
	<h2 class="infobox-builder-edit-title-modal-title">{{headerText}}</h2>
	<p class="infobox-builder-edit-title-modal-message infobox-builder-modal-message">{{messageText}}</p>
	{{wikia-ui-components/text-field
		placeholder=(i18n 'main.edit-title-placeholder' ns='infobox-builder')
		value=value
		inputId='editTemplateTitle'
		name='editTemplateTitle'
		onFocusHandler=(action 'onInputFocus')
		errorMessage=errorMessage
	}}
</div>
<div class="modal-bottom-row">
	<button {{action this.attrs.confirmButtonAction value}} disabled={{isConfirmButtonDisabled}}>
		{{confirmButtonText}}
	</button>
	{{#if showCancelButton}}
		<button {{action this.attrs.cancelButtonAction}}>{{cancelButtonText}}</button>
	{{/if}}
</div>
