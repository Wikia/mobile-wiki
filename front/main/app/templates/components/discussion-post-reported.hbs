<span class="reported-by columns large-8 small-8">
	{{reported-text}}
</span>
<div class="actions columns large-4 small-4">
	{{#if canModerate}}
		<a class="validate-link" {{action 'approve' post isReply}}>{{svg 'checkmark' class='icon validate'}}</a>
	{{/if}}
	{{#if canDelete}}
		<a class="delete-link" {{action 'delete' post isReply}}>{{svg 'trash-small' class='icon reported-delete'}}</a>
	{{/if}}
</div>
