<div class="wiki-name">{{wikiName}}</div>
{{#if displayGuidelinesLink}}
	<a href="#" class="guidelines-link active-element-theme-color">
		{{svg 'guide-small' role='img' class='icon wikia-guidelines'}}
		<span>{{i18n 'main.discussion-guidelines' ns='discussion'}}</span>
	</a>
{{/if}}
{{#if displayWikiaHomeLink}}
	<a href="/" class="wikia-home-link active-element-theme-color">
		{{svg 'home-small' role='img' class='icon wikia-home'}}
		<span>{{i18n 'main.wiki-home' ns='discussion'}}</span>
	</a>
{{/if}}
{{#if displayAppPromotion}}
	<p class="discussion-app-join-text">
		{{i18n 'main.app-promotion-text' ns='discussion'}}
	</p>
	{{#if iosAppLink}}
		<a href="{{iosAppLink}}" target="_blank">
			{{svg 'apple-store-badge' role='img' class='icon apple-store-badge' viewBox='0 0 135 40'}}
		</a>
	{{/if}}
	{{#if androidAppLink}}
		<a href="{{androidAppLink}}" target="_blank">
			{{svg 'google-play-badge' role='img' class='icon google-play-badge' viewBox='0 0 135 40'}}
		</a>
	{{/if}}
{{/if}}
