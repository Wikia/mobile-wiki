{{#if wikiName}}
	<h4 class="wiki-name">{{wikiName}}</h4>
{{/if}}
{{#if displayGuidelinesLink}}
	{{#link-to 'discussion.guidelines' class='guidelines-link active-element-theme-color' (action 'openGuidelines')}}
		{{svg 'guide-small' role='img' class='icon wikia-guidelines'}}
		<span>{{i18n 'main.discussion-guidelines' ns='discussion'}}</span>
	{{/link-to}}
{{/if}}
{{#if displayWikiaHomeLink}}
	<a href="/" class="wikia-home-link active-element-theme-color">
		{{svg 'home-small' role='img' class='icon wikia-home'}}
		<span>{{i18n 'main.wiki-home' ns='discussion'}}</span>
	</a>
{{/if}}
{{#if displayAppPromotion}}
	<p class="discussion-app-join-text">
		{{i18n (if listPage 'main.app-promotion-text' 'main.app-promotion-text-details-page') ns='discussion'}}
	</p>
	{{#if iosAppLink}}
		<a href="{{iosAppLink}}" target="_blank" class="apple-store-badge"></a>
	{{/if}}
	{{#if androidAppLink}}
		<a href="{{androidAppLink}}" target="_blank" class="google-play-badge"></a>
	{{/if}}
{{/if}}
