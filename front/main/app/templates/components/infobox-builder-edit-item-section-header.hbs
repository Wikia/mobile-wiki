{{wikia-ui-components/text-field
	value=value
	inputId=textInputId
	name='infoboxSectionHeader'
	label=(i18n 'main.section-header' ns='infobox-builder')
	onFocusHandler=(action 'onHeaderValueInputFocus')
	onBlurHandler=(action 'onHeaderValueInputBlur')
	onKeyUpHandler=(action 'onEnterKeyUpInsideFocusedInput')
}}
{{wikia-ui-components/check-box
	inputId=checkboxInputId
	isChecked=isCollapsible
	label=(i18n 'main.section-header-collapsible' ns='infobox-builder')
}}
{{infobox-builder-sidebar-info message=(concat
	(i18n 'main.help-section-header' ns='infobox-builder') ' '
	(i18n 'main.help-section-collapsible' ns='infobox-builder'))
}}
