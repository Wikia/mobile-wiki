{{wikia-ui-components/text-field
	value=value
	inputId='infoboxSectionHeader'
	name='infoboxSectionHeader'
	label=(i18n 'main.section-header' ns='infobox-builder')
	class='infobox-builder-input'
	onFocusHandler=(action 'onHeaderValueInputFocus')
	onBlurHandler=(action 'onHeaderValueInputBlur')
}}
<label for="isCollapsible" class="checkbox-builder">
	{{input
		type='checkbox'
		id='isCollapsible'
		name='isCollapsible'
		checked=isCollapsible
	}}
	{{i18n 'main.section-header-collapsible' ns='infobox-builder'}}
</label>
{{infobox-builder-sidebar-tooltip message=(i18n 'main.help-section-header' ns='infobox-builder')}}
