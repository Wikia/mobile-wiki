<li>
	{{#link-to 'discussion.user' post.createdBy.id}}
		{{svg 'empty-eye' viewBox='0 0 16 12' class='icon eye'}}
		{{i18n 'main.all-posts-by-username' userName=post.createdBy.name ns='discussion'}}
	{{/link-to}}
</li>
{{#if isShareable}}
	<li>
		<a class="share-link" {{action 'share' post}} >
			{{svg 'share' viewBox='0 0 18 18' class='icon share'}}
			{{i18n 'main.share-header' ns='discussion'}}
		</a>
	</li>
{{/if}}
{{#if canEdit}}
	<li>
		<a class="edit-link" {{action 'edit' post}}>
			{{svg 'pencil' viewBox='0 0 18 18' class='icon edit'}}
			{{editMessage}}
		</a>
	</li>
{{/if}}
{{#if canReport}}
	<li>
		<a class="report-link" {{action 'report' post}}>
			{{svg 'report' viewBox='0 0 18 18' class='icon report'}}
			{{reportMessage}}
		</a>
	</li>
{{/if}}
{{#if canLock}}
	<li>
		<a class="report-link" {{action 'lock' post}}>
			{{svg 'lock' viewBox='0 0 18 18' class='icon lock'}}
			{{lockMessage}}
		</a>
	</li>
{{/if}}
{{#if canUnlock}}
	<li>
		<a class="report-link" {{action 'unlock' post}}>
			{{svg 'unlock' viewBox='0 0 18 18' class='icon unlock'}}
			{{unlockMessage}}
		</a>
	</li>
{{/if}}
{{#if canDeleteOrUndelete}}
	<li>
		{{#if canUndelete}}
			<a class="undelete-link" {{action 'undelete' post}}>
				{{svg 'undelete' viewBox='0 0 16 19' class='icon undelete'}}
				<span>{{undeleteMessage}}</span>
			</a>
		{{/if}}
		{{#if canDelete}}
			<a class="delete-link" {{action 'delete' post}}>
				{{svg 'delete' viewBox='0 0 16 19' class='icon delete'}}
				<span>{{deleteMessage}}</span>
			</a>
		{{/if}}
	</li>
{{/if}}
