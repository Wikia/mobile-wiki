{{#if crop}}
	{{#each croppedSources as |source|}}
		<source media="{{source.media}}" srcset="{{source.src}}">
	{{/each}}
	<img alt="{{alt}}" src="{{src}}" style={{croppedStyle}}>
{{else}}
	{{#each sources as |source|}}
		<source media="{{source.media}}" srcset="{{source.src}}">
	{{/each}}
	<img alt="{{alt}}" src="{{src}}">
{{/if}}
