{{#if fullPage}}
	{{outlet}}
{{else}}
	{{site-head
		smartBannerVisible=smartBannerVisible
		toggleDrawer=this.attrs.toggleDrawer
		themeBar=themeBar
		wikiaHomepage=wikiaHomepage
		drawerContent=activeDrawerContent
		drawerVisible=drawerVisible
		setDrawerContent=(action 'setDrawerContent')
		isSearchPage=isSearchPage
	}}

	{{#wikia-drawer
		shouldBeVisible=drawerVisible
		wikiaHomepage=wikiaHomepage
	}}
		{{#if activeDrawerContent}}
			{{component
				drawerContentComponent
				searchEnterAction=(action 'closeDrawer')
				suggestionClickAction=(action 'closeDrawer')
				closeDrawer=(action 'closeDrawer')
				loadRandomArticle=this.attrs.loadRandomArticle
				goToSeachResults=this.attrs.goToSeachResults
			}}
		{{/if}}
	{{/wikia-drawer}}

	{{smart-banner-android
        isVisible=smartBannerVisible
        toggleVisibility=attrs.toggleSmartBanner
	}}
	{{#if noMargins}}
		{{outlet}}
	{{else}}
		<div class="page-wrapper row" lang={{language.content}} dir={{language.contentDir}}>
			{{outlet}}
		</div>
	{{/if}}
	{{lightbox-wrapper
		type=lightboxType
		model=lightboxModel
		isVisible=lightboxVisible
		lightboxCloseButtonDelay=lightboxCloseButtonDelay
		closeLightbox=attrs.closeLightbox
		setQueryParam=attrs.setQueryParam
	}}
{{/if}}
{{wikia-in-your-lang}}
{{alert-notifications alerts=alertNotifications}}
{{loading-spinner active=isLoading}}
