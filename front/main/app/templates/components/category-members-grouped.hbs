{{#if prevPage}}
	<div class="category-navigation">
		{{loading-spinner
			active=true
			overlay=false
			radius=16
			strokeWidth=2
		}}
		<a href="{{prevPageUrl}}" class="wds-button category-navigation__button" {{action 'loadPage' prevPage}}>
			{{i18n 'app.category-page-load-previous'}}
		</a>
	</div>
{{/if}}
{{#each-in membersGrouped as |firstLetter members|}}
	<div class="category-members-group">
		<h3>{{firstLetter}}</h3>
		<ul class="mw-content">
			{{#each members as |category|}}
				<li>
					<a href="{{category.url}}">{{category.title}}</a>
				</li>
			{{/each}}
		</ul>
	</div>
{{else}}
	<div>{{i18n 'app.category-page-no-members'}}</div>
{{/each-in}}
{{#if nextPage}}
	<div class="category-navigation">
		{{loading-spinner
			active=true
			overlay=false
			radius=16
			strokeWidth=2
		}}
		<a href="{{nextPageUrl}}" class="wds-button category-navigation__button" {{action 'loadPage' nextPage}}>
			{{i18n 'app.category-page-load-more'}}
		</a>
	</div>
{{/if}}
