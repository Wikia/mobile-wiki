<div class="wds-global-navigation__content-bar">
	<a href="http://fandom.wikia.com" class="wds-global-navigation__logo wds-global-navigation__logo-wikia">
		{{svg model.logo.header.image class='wds-global-navigation__logo-wikia-icon'}}
		<span class="wds-global-navigation__logo-wikia-caption">{{i18n model.logo.header.subtitle.key ns='design-system'}}</span>
	</a>
	{{#if model.fandom_overview}}
		{{#each model.fandom_overview.links as |link|}}
			{{global-navigation-link-branded model=link}}
		{{/each}}
	{{/if}}
	<div class="wds-global-navigation__wikis-menu wds-dropdown">
		<div class="wds-dropdown__toggle wds-global-navigation__dropdown-toggle">
			<span>Wikis</span>
			{{svg 'wds-icons-dropdown-tiny' class='wds-icon wds-icon-tiny wds-dropdown__toggle-chevron'}}
		</div>
		<div class="wds-dropdown__content wds-global-navigation__dropdown-content">
			<ul class="wds-list">
				<li><a href="http://fandom.wikia.com/explore" class="wds-global-navigation__dropdown-link" data-tracking-label="global-navigation-wikis-explore">Explore Wikis</a></li>
				<li><a href="http://community.wikia.com/wiki/Community_Central" class="wds-global-navigation__dropdown-link" data-tracking-label="global-navigation-wikis-community-central">	Community Central</a></li>
				<li><a href="http://community.wikia.com/wiki/Wikia_University" class="wds-global-navigation__dropdown-link" data-tracking-label="global-navigation-wikis-fandom-university">	Fandom University</a></li>
			</ul>
		</div>
	</div>
	<form class="wds-global-navigation__search" action="/wiki/Special:Search?fulltext=Search">
		<div class="wds-global-navigation__search-input-wrapper">
			<label class="wds-global-navigation__search-label">
				{{svg 'wds-icons-magnifying-glass' class='wds-icon wds-icon-small wds-global-navigation__search-label-icon'}}
				<input id="searchInput" class="wds-global-navigation__search-input" name="query" data-active-placeholder="Search Wiki..." placeholder="Search"/>
			</label>
			<button class="wds-button wds-is-text wds-global-navigation__search-close" type="reset">
				{{svg 'wds-icons-cross' class='wds-icon wds-icon-small wds-global-navigation__search-close-icon'}}
			</button>
		</div>
		<button class="wds-button wds-global-navigation__search-submit">
			{{svg 'wds-icons-arrow' class='wds-icon wds-icon-small wds-global-navigation__search-submit-icon'}}
		</button>
	</form>
	<div class="wds-global-navigation__account-menu wds-dropdown">
		<div class="wds-dropdown__toggle wds-global-navigation__dropdown-toggle">
			{{svg 'wds-icons-user' class='wds-icon wds-icon-small wds-icon'}}
			<span class="wds-global-navigation__account-menu-caption">My Account</span>
			{{svg 'wds-icons-dropdown-tiny' class='wds-icon wds-icon-tiny wds-dropdown__toggle-chevron'}}
		</div>
		<div class="wds-dropdown__content wds-global-navigation__dropdown-content wds-is-right-aligned">
			<ul class="wds-list wds-has-lines-between">
				<li><button class="wds-button wds-is-full-width">Sign In</button></li>
				<li>
					<div class="wds-global-navigation__account-menu-dropdown-caption">Don't have an account?</div>
					<button class="wds-button wds-is-full-width wds-is-secondary">Register</button>
				</li>
			</ul>
		</div>
	</div>
	<div class="wds-global-navigation__start-a-wiki ">
		<a href="http://www.wikia.com/Special:CreateNewWiki" class="wds-button wds-is-squished wds-is-secondary">
			<span class="wds-global-navigation__start-a-wiki-caption">Start a Wiki</span>
			{{svg 'wds-icons-plus' class='wds-global-navigation__start-a-wiki-icon wds-icon'}}
		</a>
	</div>
</div>
