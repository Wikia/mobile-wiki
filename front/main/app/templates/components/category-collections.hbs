{{#each-in collections as |id data|}}
	<h3 id="{{id}}">{{id}}</h3>
	{{#if data.hasPrev}}
		<div class="category-navigation">
			<button class="category-navigation__button" {{action attrs.loadBatch id data.prevBatch 'prev'}}>
				{{i18n 'app.categories-load-previous'}}
			</button>
		</div>
	{{/if}}
	<ul>
		{{#each data.items as |item|}}
			<li><a href="{{item.url}}">{{item.name}}</a></li>
		{{/each}}
	</ul>
	{{#if data.hasNext}}
		<div class="category-navigation">
			<button class="category-navigation__button" {{action attrs.loadBatch id data.nextBatch 'next'}}>
				{{i18n 'app.categories-load-more'}}
			</button>
		</div>
	{{/if}}
{{/each-in}}
