{{#each-in collections as |id data|}}
	<h3 id="{{id}}">{{id}}</h3>
	{{#if data.hasPrev}}
		<div class="category-navigation{{if batchIsLoading ' is-loading'}}">
			{{loading-spinner
				active=batchIsLoading
				overlay=false
				radius=16
				strokeWidth=2
			}}
			<button class="category-navigation__button" {{action attrs.loadBatch id data.prevBatch 'prev'}}>
				{{i18n 'app.categories-load-previous'}}
			</button>
		</div>
	{{/if}}
	<ul>
		{{#each data.items as |item|}}
			<li>{{link-to item.name 'wiki-page' item.title}}</li>
		{{/each}}
	</ul>
	{{#if data.hasNext}}
		<div class="category-navigation{{if batchIsLoading ' is-loading'}}">
			{{loading-spinner
				active=batchIsLoading
				overlay=false
				radius=16
				strokeWidth=2
			}}
			<button class="category-navigation__button" {{action attrs.loadBatch id data.nextBatch 'next'}}>
				{{i18n 'app.categories-load-more'}}
			</button>
		</div>
	{{/if}}
{{/each-in}}
