<div class="discussion-reply">
	{{#if showRepliedTo}}
		<div class="user-replied-to">
			{{i18n 'main.user-replied-to' userName=post.threadCreatedBy.name ns='discussion'}}
		</div>
	{{/if}}
	{{#if isReported }}
		<div class="reported">
			<span>Reported by username</span>
			{{svg 'checkmart' viewBox='0 0 40 40' class='validate-icon'}}
			{{svg 'trash-small' viewBox='0 0 40 40' class='reported-delete-icon'}}
		</div>
	{{/if}}
	<div>
		<div class="upvotes">
			{{discussion-upvote-reply
				post=post
				upvote=(action this.attrs.upvote)
			}}
		</div>
		{{user-avatar
			avatarUrl=author.avatarUrl
			displayProfileName=true
			username=author.name
		}}
		<span class="timestamp">
			&bull; {{time-ago post.creationDate.epochSecond}}
		</span>

		<div class="discussion-more-options" id="reply-options-{{post.id}}">
			{{svg 'more' viewBox='0 0 4 18' class='icon more-icon'}}
		</div>

		{{#pop-over for=(concat 'reply-options-' post.id) on='click' flow='flip'}}
			{{discussion-more-options
				delete=(action 'delete')
				deleteMessage=(i18n 'main.delete-reply' ns='discussion')
				post=post
				report=(action 'report')
				reportMessage=(i18n 'main.report-reply' ns='discussion')
				undelete=(action 'undelete')
				undeleteMessage=(i18n 'main.undelete-reply' ns='discussion')
			}}
		{{/pop-over}}
	</div>
	{{#if userListView}}
		<div class="discussion-content">
			{{#link-to 'discussion.post.reply' post.threadId post.id class="post-details-link clamp"}}
				{{{parsedContent}}}
			{{/link-to}}
		</div>
	{{else}}
		<div class="discussion-content">
			{{{parsedContent}}}
		</div>
	{{/if}}
</div>
{{#if post.isLoading}}
	{{loading-spinner
	active=post.isLoading
	radius=32
	strokeWidth=2
	}}
{{/if}}
