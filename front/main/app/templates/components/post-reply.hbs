<div class="discussion-reply">
	<div>
		<div class="upvotes">
			{{discussion-upvote-reply
				post=post
				upvote=(action this.attrs.upvote)
			}}
		</div>
		{{user-avatar
			avatarUrl=author.avatarUrl
			displayProfileName=true
			username=author.name
		}}
		<span class="timestamp">
			&bull; {{time-ago post.creationDate.epochSecond}}
		</span>

		<div class="discussion-more-options" id="reply-options-{{post.id}}">
			{{svg 'more' viewBox='0 0 4 18' class='icon more-icon'}}
		</div>

		{{#pop-over for=(concat 'reply-options-' post.id) on='click' flow='flip'}}
			<ul class="more-options">
				<li>
					{{discussion-delete
						delete=(action 'delete')
						deleteMessage=(i18n 'main.delete-reply' ns='discussion')
						undelete=(action 'undelete')
						undeleteMessage=(i18n 'main.undelete-reply' ns='discussion')
						post=post
					}}
				</li>
				<li>
					{{#link-to 'index'}}
						{{svg 'empty-eye' viewBox='0 0 16 12' class='icon eye'}}
						{{i18n 'main.all-posts-by-username' userName=author.name ns='discussion'}}
					{{/link-to}}
				</li>
			</ul>
		{{/pop-over}}
	</div>
	<div class="discussion-content">
		{{{parsedContent}}}
	</div>
</div>
{{#if post.isLoading}}
	{{loading-spinner
	active=post.isLoading
	radius=32
	strokeWidth=2
	}}
{{/if}}
