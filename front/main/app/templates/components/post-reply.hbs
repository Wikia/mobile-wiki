<div class="discussion-reply">
	{{#if showRepliedTo}}
		<div class="user-replied-to">
			{{{i18n 'main.user-replied-to' userName=encodedAuthorName linkToThread=linkToThread ns='discussion'}}}
		</div>
	{{/if}}
	<div>
		<div class="upvotes">
			{{discussion-upvote-reply
				post=post
				upvote=(action this.attrs.upvote)
			}}
		</div>
		{{user-avatar
			avatarUrl=author.avatarUrl
			displayProfileName=true
			username=author.name
		}}
		<span class="timestamp">
			&bull; {{time-ago post.creationDate.epochSecond}}
		</span>
		{{discussion-delete
			delete=(action this.attrs.deleteReply)
			undelete=(action this.attrs.undeleteReply)
			post=post
		}}
	</div>
	{{#if userListView}}
		<div class="discussion-content clickable" onclick={{action 'goToPost' post.threadId}}>
			{{{parsedContent}}}
		</div>
	{{else}}
		<div class="discussion-content">
			{{{parsedContent}}}
		</div>
	{{/if}}
</div>
{{#if post.isLoading}}
	{{loading-spinner
	active=post.isLoading
	radius=32
	strokeWidth=2
	}}
{{/if}}
