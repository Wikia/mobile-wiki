<img src="{{thumbUrl}}" {{action 'edit'}}/>
<div class="item-description" {{action 'edit'}}>
	<div class="title">{{title}}</div>
	{{#if model.items}}
		<div class="subtitle">{{itemsCountLabel}}</div>
	{{/if}}
	{{#if model.description}}
		<div class="subtitle">{{model.description}}</div>
	{{/if}}
</div>
{{#unless disableMove}}
	<div class="navigation">
		<div class="arrow-wrapper" {{action 'moveBy' -1 bubbles=false}}>
			{{svg 'chevron' role='img' class='icon arrow arrow-up pointer-events-none'}}
		</div>
		<div class="arrow-wrapper" {{action 'moveBy' 1 bubbles=false}}>
			{{svg 'chevron' role='img' class='icon arrow arrow-down pointer-events-none'}}
		</div>
	</div>
{{/unless}}

