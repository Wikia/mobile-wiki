{{#each media as |image|}}
	<figure class="pi-item {{if image.isActive 'active'}} article-{{image.type}}" data-ref="{{image.ref}}" data-gallery-ref="{{image.galleryRef}}">
		{{#if image.caption}}
			<hgroup class="pi-hero-title-wrapper pi-item-spacing">
				<h3 class="pi-hero-caption">{{image.caption}}</h3>
			</hgroup>
		{{/if}}
		<img src="{{image.thumbUrl}}" class="{{if image.load 'loaded'}}">
	</figure>
{{/each}}
<div class="image-collection-actions">
	{{#if hasPreviousImage}}<button class="action-previous" {{action 'switchImage' 'previous'}}>{{svg 'chevron-linked' viewBox='0 0 12 7'}}</button>{{/if}}
	{{#if hasNextImage}}<button class="action-next" {{action 'switchImage' 'next'}}>{{svg 'chevron-linked' viewBox='0 0 12 7'}}</button>{{/if}}
</div>
