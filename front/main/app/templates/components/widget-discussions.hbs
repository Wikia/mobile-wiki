{{#if posts}}
	<h1 class="heading-wrapper">
		<h2 class="heading">
			{{i18n 'widget-discussions.header-title'}}
		</h2>
		<a href="/d/f" class='heading-viewall'>
			{{i18n 'widget-discussions.all-discussions-link-mobile'}}
			{{svg 'arrow-right-long'}}
		</a>
	</h1>
{{/if}}
{{#each posts as |post|}}
	<div class="post-detail">
		<div class="post-header">
			<div class="user-avatar">
				<figure class="avatar">
					<a href="{{post.createdBy.profileUrl}}">
						<img src="{{post.createdBy.avatarUrl}}">
					</a>
				</figure>
				<a class="avatar-username" href="{{post.createdBy.profileUrl}}">{{post.createdBy.name}}</a>
			</div>
			<span class="timestamp" title="{{timestamp-to-date post.creationTimestamp}}">
				&bull; {{time-ago post.creationTimestamp}}
			</span>
		</div>
		<div class="discussion-content">
			{{#if post.title}}
				<h2 class="post-title">
					<a class="post-details-link" href="/d/p/{{post.threadId}}">{{post.title}}</a>
				</h2>
			{{/if}}
			<a class="post-details-link clamp" href="/d/p/{{post.threadId}}">TODO content and links</a>
		</div>
		<!--
