{{#each displayedImages as |image|}}
	{{#if enableLightbox}}
		{{discussion-lightbox
				imageUrl=image.url
				onClose=(action 'onLightboxClose')
				onButtonClose=(action 'onLightboxCloseUsingButton')
				onKeyClose=(action 'onLightboxCloseUsingKey')
				onOpen=(action 'onLightboxOpen')
		}}
	{{else}}
		<img class="post-image" src="{{image.url}}" alt="Post image"/>
	{{/if}}
{{/each}}
