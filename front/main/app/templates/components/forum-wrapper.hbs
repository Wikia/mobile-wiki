{{discussion-post-editor
	create=(action this.attrs.create)
	posts=posts
	siteHeadPinned=siteHeadPinned
}}

{{#each posts as |item|}}
	{{post-detail
		author=item.createdBy
		delete=(action this.attrs.deletePost)
		goToPost=(action this.attrs.goToPost)
		post=item._embedded.firstPost.[0]
		postId=item.id
		replyCount=item.postCount
		undelete=(action this.attrs.undeletePost)
		upvote=(action this.attrs.upvote)
	}}
{{else}}
	{{discussion-empty-forum-message}}
{{/each}}

{{#if hasMore}}
	{{#if isLoading }}
		{{loading-spinner
			active=true
			overlay=false
			radius=32
			strokeWidth=2
		}}
	{{/if}}
	<div class="load-more">
		{{i18n 'main.loading-more-posts' ns='discussion'}}
	</div>
{{/if}}
