{{header}}
{{#if collapsible}}
	<div id="infobox-builder-chevron-{{uniq}}" class="infobox-builder-chevron-area"
		{{action onGroupPreviewStart on="mouseEnter"}}
		{{action onGroupPreviewStop on="mouseLeave"}}></div>
	{{#if isGroupHighlighted}}
		{{#if inTop}}
			{{#pop-over for=(concat 'infobox-builder-chevron-' uniq) on="hover" flow="bottomLeft"}}
				<p class="infobox-builder-popup-text">{{i18n 'main.help-section-collapsible' ns='infobox-builder'}}</p>
			{{/pop-over}}
		{{else}}
			{{#pop-over for=(concat 'infobox-builder-chevron-' uniq) on="hover" flow="topLeft"}}
				<p class="infobox-builder-popup-text">{{i18n 'main.help-section-collapsible' ns='infobox-builder'}}</p>
			{{/pop-over}}
		{{/if}}
	{{/if}}
{{/if}}
