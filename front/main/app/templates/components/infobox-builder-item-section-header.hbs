{{header}}
{{#if collapsible}}
	<div id="infobox-builder-header-chevron-{{index}}" class="infobox-builder-chevron-area"
			{{action onGroupPreviewStart on="mouseEnter"}}
			{{action onGroupPreviewStop on="mouseLeave"}}></div>
	{{#if isGroupHighlighted}}
		{{#pop-over for=(concat 'infobox-builder-header-chevron-' index) on="hover" flow="topLeft"}}
			<p class="infobox-builder-popup-text">{{i18n 'main.help-section-collapsible' ns='infobox-builder'}}</p>
		{{/pop-over}}
	{{/if}}
{{/if}}
