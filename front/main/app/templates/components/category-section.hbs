<h3 id="{{id}}">{{id}}</h3>
{{#if data.hasPrev}}
	<div class="category-navigation">
		{{loading-spinner
			active=true
			overlay=false
			radius=16
			strokeWidth=2
		}}
		<button class="category-navigation__button" data-previous {{action 'loadBatch' id data.prevBatch 'previous'}}>
			{{i18n 'app.category-page-load-previous'}}
		</button>
	</div>
{{/if}}
<ul class="mw-content">
	{{#each data.items as |item|}}
		<li><a {{action 'trackClick' 'category-page' 'open-link'}} href="{{item.url}}">{{item.name}}</a></li>
	{{/each}}
</ul>
{{#if data.hasNext}}
	<div class="category-navigation">
		{{loading-spinner
			active=true
			overlay=false
			radius=16
			strokeWidth=2
		}}
		<button class="category-navigation__button" data-next {{action 'loadBatch' id data.nextBatch 'next'}}>
			{{i18n 'app.category-page-load-more'}}
		</button>
	</div>
{{/if}}
