{{#if model.inRoot}}
	{{#if isUserAuthenticated}}
		<div class="wikia-nav__header">
			<a {{action 'trackClick' 'side-nav' 'open-user-profile' preventDefault=false}} href="{{userProfileLink}}" class="external profile-link">
				<figure class="wikia-nav__avatar">
					<img src={{currentUser.avatarPath}} alt="{{currentUser.name}}">
				</figure>
				{{i18n 'app.user-menu-profile'}}
			</a>
			<a {{action 'trackClick' 'side-nav' 'open-logout' preventDefault=false}} href="{{unbound logoutLink}}" class="external logout">{{i18n 'app.user-menu-log-out'}}</a>
		</div>
	{{else}}
		<a class="wikia-nav__header main" {{action 'goToLogin'}}>{{i18n 'userStatus.login-text'}} / {{i18n 'userStatus.register-text'}}</a>
	{{/if}}
{{else}}
	<a class="wikia-nav__header back" {{action 'goBack'}} href="#">
		{{model.header}}
	</a>
{{/if}}

{{nav-menu
	items=model.items
	onClickHandler=(action 'onClick')
	onChangeItemHandler=(action 'goToSubNav')
}}
