<div class="discussion-header header clearfix background-theme-color">
	{{#if hasBackButton }}
		{{#link-to 'discussion.forum' (query-params sort=discussionSort.sortBy) class="side-button back-button"}}
			{{svg 'back-arrow' role='img' class='icon arrow-left'}}
			{{i18n 'main.back-to-discussions-link' ns='discussion'}}
		{{/link-to}}
	{{/if}}
	{{#if hasSiteName}}
		<h1>{{siteName}}</h1>
	{{/if}}
	{{#unless hasContentError}}
		{{#if hasNewPostButton}}
			<div {{action 'toggleEditor' true}} class="new-post">
				{{svg 'new-post-icon' viewBox='0 0 56 50'}}
			</div>
		{{/if}}
		{{#if hasFilters}}
			<div class="sort {{if isFilterApplied 'applied'}}" id="discussion-mobile-filter">
				{{svg 'filter-default' class='icon filter-default'}}
				{{svg 'filter-applied' class='icon filter-applied'}}
			</div>

			{{#pop-over for='discussion-mobile-filter' on='click' flow='downCentered' class='filters-popover'}}
				{{discussion-filters
					applyFilters=(action this.attrs.applyFilters)
					showApplyButton=true
					showCategories=false
					showSortSection=true
					canModerate=canModerate
					categories=categories
				}}
			{{/pop-over}}
		{{/if}}
	{{/unless}}
	{{#if canDeleteAll}}
		<div {{action this.attrs.deleteAllPosts}} class="side-button delete-all">
			{{svg 'delete' viewBox='0 0 16 19' class='icon delete'}}
			{{i18n 'main.delete-all' ns='discussion'}}
		</div>
	{{/if}}
</div>
