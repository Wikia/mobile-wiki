<div class="header clearfix background-theme-color">
	{{#if hasBackButton }}
		{{#link-to 'discussion.forum' forumId discussionSort.sortBy class="back-button"}}
			{{svg 'back-arrow' role='img' class='icon arrow-left'}}
			{{i18n 'main.back-to-discussions-link' ns='discussion'}}
		{{/link-to}}
	{{/if}}
	{{#if hasSiteName}}
		<h1>{{siteName}}</h1>
	{{/if}}
	{{#if hasNewPostButton}}
		<div {{action 'toggleEditor' true}} class="new-post">
			{{svg 'new-post-icon' viewBox='0 0 56 50'}}
		</div>
	{{/if}}
	{{#if hasSortMenu}}
		<div class="sort {{if isFilterApplied 'applied'}}" id="discussion-mobile-filter">
			{{svg 'filter-default' viewBox='0 0 24 24' class='icon filter-default'}}
			{{svg 'filter-applied' viewBox='0 0 10 10' class='icon filter-applied'}}
		</div>

		{{#pop-over for='discussion-mobile-filter' on='click' flow='dropdown'}}

		{{/pop-over}}
	{{/if}}
	{{#if overlayIsVisible}}
		<div {{action 'hideSortComponent'}} class="overlay"></div>
	{{/if}}
</div>
