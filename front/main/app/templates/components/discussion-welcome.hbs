{{#unless wasSeen}}
	<div class="discussion-welcome">
		<div class="welcome-sun">
			{{svg 'welcome-sun-background' class="sun-background" viewBox='0 0 50 50'}}
			{{svg 'sun' class="sun" viewBox='0 0 38 38'}}
		</div>
		<a href="#" class="welcome-close" {{action 'close' bubbles=false}}>
			{{svg 'close-small' viewBox='0 0 10 10'}}
		</a>
		<h5>{{i18n 'main.welcome-message-header' ns='discussion'}}</h5>
		<p>{{{i18n 'main.welcome-message-text' ns='discussion' guidelinesLinkTitle=guidelinesLink}}}</p>
	</div>
{{/unless}}
