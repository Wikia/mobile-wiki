<span class="fancy-checkbox-span {{if isChecked 'active-element-background-color'}} {{if disabled 'disabled'}}">
	{{one-way-input
		checked=isChecked
		class='fancy-checkbox'
		id=inputId
		name=inputId
		type='checkbox'
	}}
	{{#if isChecked}}
		{{svg 'checkbox-checkmark' class='icon' viewBox="0 0 20 14"}}
	{{/if}}
</span>
{{label}}
