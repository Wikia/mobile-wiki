{{input
	class=(concat 'text-field-input ' inputClasses)
	value=valueProxy
	id=inputId
	name=name
	focus-out='onBlur'
	focus-in='onFocus'
	enter='onEnter'
	change=this.attrs.onChange
	placeholder=placeholder
	key-up='onKeyUp'
	type=type
}}
<label class={{labelClassNames}} for={{inputId}}>{{label}}</label>
{{#if errorMessage}}
	<span class="text-field-error-message">{{errorMessage}}</span>
{{/if}}
