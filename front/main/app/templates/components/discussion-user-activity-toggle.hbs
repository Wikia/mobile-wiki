<ul class="user-activity-options">
	<li class="{{if options.posts.isActive 'active'}}">
		{{#link-to 'discussion.moderator.user-activity.posts'}}
			{{i18n 'user-activity.active-users-toggle-option' ns='discussion'}}
		{{/link-to}}
	</li>
	<li class="{{if options.reports.isActive 'active'}}">
		{{#link-to 'discussion.moderator.user-activity.reports'}}
			{{i18n 'user-activity.reports-toggle-option' ns='discussion'}}
		{{/link-to}}
    </li>
    <li class="{{if options.moderatorActions.isActive 'active'}}">
		{{#link-to 'discussion.moderator.user-activity.moderations'}}
			{{i18n 'user-activity.moderator-actions-toggle-option' ns='discussion'}}
		{{/link-to}}
	</li>
</ul>

{{#if responsive.isMobile}}
	{{discussion-days-toggle
		days=days
		setDays=setDays
	}}
{{/if}}
