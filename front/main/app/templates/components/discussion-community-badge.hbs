<div class="community-badge-image {{if isEditMode 'highlight-overlay-content'}} {{if showDefaultBackground 'community-badge-image-default'}}">
	{{!-- this two images are only because not to loose the wikiImageUrl from the DOM to immediately show it back --}}
	<img class="badge-image-display badge-image-display-original {{unless isImagePreviewMode 'is-visible'}}" src="{{wikiImageUrl}}" {{action 'clickCommunityBadge'}}>
	{{#if canEdit}}
		<div class="drag-and-drop">
			{{svg 'drag-n-drop' role='img'}}
			<div class="drop-catch-layer"></div>
		</div>
		{{#unless isDragActive}}
			<img class="badge-image-display {{if isImagePreviewMode 'is-visible'}}" src="{{newImageUrl}}">
			<div class="error-message-container {{if errorMessage 'is-visible'}}">
				{{svg 'report' viewBox='0 0 18 18' class='icon error'}}
				<span class="error-message">{{errorMessage}}</span>
			</div>
			{{#if isEditMode}}
				{{discussion-edit-approve-buttons
					approve=(action 'submit')
					close=(action 'disableEditMode')
				}}
			{{/if}}
			{{#if isLoadingMode}}
				<div class="is-loading">
					{{loading-spinner
						active=true
						overlay=false
						radius=32
						strokeWidth=2
					}}
				</div>
			{{else}}
				{{#if isEditMode}}
					{{#unless isImagePreviewMode}}
						<div class="image-edit-mode">
							{{file-input
								classNames=fileInputClassNames
								click=(action 'emptyClickForFileInput')
								fileUpload=(action 'fileUpload')
								label=(i18n 'main.upload-image-button-text' ns='discussion')
								reset=resetFileInput
							}}
							{{{i18n 'main.edit-badge-hint-text' ns='discussion'}}}
						</div>
					{{/unless}}
				{{else}}
					{{discussion-edit-image-button
						click=(action 'enableEditMode')
						label='main.edit-guidelines'
					}}
				{{/if}}
			{{/if}}
		{{/unless}}
	{{/if}}
</div>
<h2>{{#track-click action='clickCommunityName'}}{{displayedWikiName}}{{/track-click}}</h2>
{{wikia-ui-components/highlight-overlay
	isVisible=isEditMode
}}
