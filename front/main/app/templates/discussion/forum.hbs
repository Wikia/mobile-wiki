{{#discussion-entities-list-layout
	applyFilters=(action 'applyFilters')
	model=model.data
}}
	{{discussion-sort
		setSortBy=(action 'setSortBy')
	}}
	{{discussion-forum-wrapper
		approve=(action 'approve')
		create=(action 'create')
		deletePost=(action 'deletePost')
		forumId=model.data.forumId
		loadPage=(action 'loadPage')
		lockPost=(action 'lockPost')
		minorError=model.data.minorError
		pageNum=model.data.pageNum
		posts=model.data.entities
		postsDisplayed=model.data.entities.length
		report=(action 'report')
		siteHeadPinned=siteHeadPinned
		totalPosts=model.data.postCount
		undeletePost=(action 'undeletePost')
		upvote=(action 'upvote')
		unlockPost=(action 'unlockPost')
	}}
{{/discussion-entities-list-layout}}
