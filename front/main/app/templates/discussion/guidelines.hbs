{{#discussion-standalone-layout
	deleteAllPosts=(action 'deleteAllPosts')
	smartBannerVisible=smartBannerVisible
	pageTitle=(i18n 'main.discussions-guidelines-header-title' numberOfPosts=numberOfPosts ns='discussion')
}}
	{{#if model.attributes.data.guidelines}}
		{{discussion-guidelines
			content=model.attributes.data.guidelines.value
			editGuidelines=(action 'editGuidelines')
		}}
	{{else}}
		{{discussion-error
			error=model.attributes.error
		}}
	{{/if}}
{{/discussion-standalone-layout}}
