{{#modal-dialog
	class='is-bare is-desktop-centered discussion-editor-dialog guidelines-editor'
	closeOnOverlayClick=false
	isVisible=guidelinesEditorState.isOpen
}}
	{{discussion-guidelines-editor
		editPost=(action 'editPost')
		editReply=(action 'editReply')
		errorMessage=guidelinesEditorState.errorMessage
		generateOpenGraph=(route-action 'generateOpenGraph')
		gotoGuidelines=(action 'gotoGuidelines')
		guidelines=guidelinesEditorState.guidelines
		isActive=guidelinesEditorState.isOpen
		isEdit=true
		isLoading=guidelinesEditorState.isLoading
		saveGuidelines=(action 'saveGuidelines')
		setEditorActive=(action 'setEditorActive')
	}}
{{/modal-dialog}}
{{#discussion-standalone-layout
	deleteAllPosts=(action 'deleteAllPosts')
	smartBannerVisible=smartBannerVisible
	pageTitle=(i18n 'main.guidelines-header-title' ns='discussion')
}}
	{{#if model.attributes.data.guidelines}}
		{{discussion-guidelines
			guidelines=model.attributes.data.guidelines
			heroImage=model.attributes.data.heroImage
			openGuidelinesEditor=(action 'openGuidelinesEditor')
			uploadDiscussionsHeader=(action 'uploadDiscussionsHeader')
		}}
	{{else}}
		{{discussion-error
			error=model.attributes.error
		}}
	{{/if}}
{{/discussion-standalone-layout}}
