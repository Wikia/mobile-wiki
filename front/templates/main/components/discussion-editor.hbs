<label class="editor-label">{{i18n labelText ns='discussion'}}</label>
<div class="editor-container {{if isSticky 'sticky'}} {{unless siteHeadPinned pinnedClassName}}">
	<a href="#" class="editor-close" {{action 'toggleEditorActive' false bubbles=false}}>
		{{svg 'close' class="fill-theme-color" viewBox='0 0 18 18'}}
	</a>
	<button class="active-element-theme-color" type="submit" {{action 'create' bubbles=false}} disabled={{submitDisabled}}>{{i18n submitText ns='discussion'}}</button>
		<div class="editor-wrapper">
			{{textarea class='editor-textarea' keyPress=(action 'handleKeyPress') input=(action 'updateOnInput') focusIn=(action 'toggleEditorActive' true) value=bodyText placeholder=(i18n placeholderText ns='discussion')}}
			<span class="editor-textarea-overflow" {{action 'toggleEditorActive' true}}></span>
		</div>
	{{user-avatar
		avatarUrl=currentUser.avatarPath
	}}
	{{#if isLoading}}
		{{loading-spinner
			active=isLoading
			radius=32
			strokeWidth=2
		}}
	{{/if}}
	{{#if showSuccess}}
		<div class="loading-overlay">
			{{svg 'success' class='success' viewBox='0 0 80 80'}}
		</div>
	{{/if}}
</div>
