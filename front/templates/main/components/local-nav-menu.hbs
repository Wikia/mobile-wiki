<li class='title'>
	{{#if parentItem}}
		{{currentMenuItem.text}}
	{{else}}
		{{i18n 'side-nav-menu-label'}}
	{{/if}}
</li>
{{#if parentItem}}
	<li>
		<div {{action 'goBack'}}>
			{{svg 'chevron' viewBox='0 0 12 7' class='icon chevron back'}}
			{{i18n 'navigation-back-label'}}
		</div>
	</li>
{{else}}
	<li>
		<div {{action 'randomArticle'}} class="random-article">{{i18n 'random-page-label'}}</div>
	</li>
{{/if}}
{{#each child in currentMenuItem.children}}
	{{#if child.children}}
		<li>
			<div {{action 'changeMenuItem' child.index}}>
				{{unbound child.text}}
				{{svg 'chevron' viewBox='0 0 12 7' class='icon chevron'}}
			</div>
		</li>
	{{else}}
        <li>
			<a {{action 'collapseSideNav'}} href='{{unbound child.href}}'>{{unbound child.text}}</a>
		</li>
	{{/if}}
{{/each}}
