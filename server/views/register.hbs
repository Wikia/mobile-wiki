<section class="auth-content">
	<form id="signupForm" action="{{heliosRegistrationURL}}" method="POST">
		<div class="input-container">
			<input type="email" name="email" id="signupEmail" required />
			<label class="floating-label" for="signupEmail">{{i18n "auth:register.email-label"}}</label>
		</div>
		<div class="input-container">
			<input type="text" name="username" id="signupUsername" maxlength="{{usernameMaxLength}}" required />
			<label class="floating-label" for="signupUsername">{{i18n "auth:common.username-label"}}</label>
		</div>
		<div class="input-container">
			<input type="password" name="password" id="signupPassword" autocomplete="off" maxlength="{{passwordMaxLength}}" required />
			<label class="floating-label" for="signupPassword">{{i18n "auth:common.password-label"}}</label>
			<span class="input-icon password-toggler"></span>
		</div>
		<div class="input-container">
			<div class="birthdate-container input hide">
				{{#birthdateInputs}}
					<input type="number" name="{{name}}" class="fake-input birth-{{name}}" maxlength="{{maxLength}}" max="{{maxVal}}" placeholder="{{placeholder}}" required>
					<span>{{separator}}</span>
				{{/birthdateInputs}}
			</div>
			<input type="text" name="birthdate" id="signupBirthDate" required>
			<label class="floating-label" for="signupBirthDate">{{i18n "auth:register.birthdate-label"}}</label>
		</div>
		<label for="signupNewsletter" class="inline signup-newsletter-label hide">
			<!-- For the MVP we do not have marketing opt-in yet-->
			<input type="hidden" name="marketingallowed" id="signupNewsletter" class="inline" value="0">
			{{i18n "auth:register.wikia-newsletter-prompt"}}
		</label>
		<input type="hidden" name="langCode" value="{{langCode}}">
		<button id="signupSubmit" type="submit" disabled><span>{{i18n "auth:register.register-action"}}</span></button>
		<small class="terms-of-use">
			{{i18n "auth:register.terms-of-use-text"}}
			<a href="{{{termsOfUseLink}}}" target="_blank">
				{{i18n "auth:register.terms-of-use-link"}}
			</a>
		</small>
	</form>
</section>
