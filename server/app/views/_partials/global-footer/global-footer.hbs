<footer class="global-footer is-{{wikiVariables.language.content}}">
	{{#if model.international_header}}
		<h2 class="global-footer__header">
			{{#with model.international_header.header as |header|}}
				{{> svg class='global-footer__large-wikia-logo' image=header.image}}
				<span class="global-footer__home-of-fandom">{{i18n header.subtitle.key ns='design-system'}}</span>
			{{/with}}
		</h2>
	{{/if}}
	<div class="global-footer__main">
		{{#unless model.international_header}}
			{{> global-footer/global-footer-image-header model=model.fandom.header section='fandom'}}
		{{/unless}}
		<div class="global-footer__fandom-sections">
			{{> global-footer/global-footer-section model=model.fandom_overview name='fandom-overview' parentName='fandom'}}
			{{> global-footer/global-footer-section model=model.follow_us name='follow-us' parentName='fandom'}}
		</div>
		{{#unless model.international_header}}
			{{> global-footer/global-footer-image-header model=model.wikia.header section='wikia'}}
		{{/unless}}
		<div class="global-footer__wikia-sections">
			{{> global-footer/global-footer-section model=model.company_overview name='company-overview' parentName='wikia'}}
			{{> global-footer/global-footer-section model=model.site_overview name='site-overview' parentName='wikia'}}
			{{> global-footer/global-footer-section model=model.community name='community' parentName='wikia'}}
			{{> global-footer/global-footer-section model=model.create_wiki name='create-wiki' parentName='wikia'}}
			{{> global-footer/global-footer-section model=model.community_apps name='community-apps' parentName='wikia'}}
			{{> global-footer/global-footer-section model=model.advertise name='advertise' parentName='wikia'}}
		</div>
	</div>
	<div class="global-footer__licensing-and-vertical">
		<span>{{{i18n
			model.licensing_and_vertical.description.key
			license=(wrap-me
				model.licensing_and_vertical.description.params.license.title.value
				tagName='a'
				href=model.licensing_and_vertical.description.params.license.href
			)
			ns='design-system'
		}}}</span>
	</div>
</footer>
