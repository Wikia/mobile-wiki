{{! Keep the same HTML structure as in front/main/app/templates/components/curated-content-item.hbs }}
<a href="{{model.url}}" class="curated-content-item {{model.type}}">
	<figure class="item-figure">
		<div class="item-image">
			{{#if model.imageUrl}}
				<img src="{{model.imageUrl}}" alt="{{model.label}}"/>
			{{else}}
				<img src="data:image/gif;base64,R0lGODlhAQABAIAAAAAAAP///yH5BAEAAAAALAAAAAABAAEAQAIBRAA7" alt="{{model.label}}" />
			{{/if}}
		</div>
		<figcaption class="item-figcaption">
			<div class="item-caption-row">
				<div class="item-caption label">
					<div class="item-caption clamp">{{truncate model.label 48}}</div>
				</div>
			</div>
		</figcaption>
	</figure>
</a>
